<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         defaultButton="{submitNotificationScheme}" styleName="unpadded"
         width="100%" height="100%" verticalGap="8">

    <fx:Declarations>
        <!--<mx:StringValidator id="groupDescriptionValidator"  source="{groupDescription}" required="true" property="text" />-->
    </fx:Declarations>

    <mx:FormHeading label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'liveupdate.setup.form.heading')}"/>

    <mx:HRule width="100%"/>

    <s:HGroup>
        <s:CheckBox width="100" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'liveupdate.setup.schemeEnabled')}"/>
        <s:Label text="{resourceManager.getString(AtricoreConsole.BUNDLE, 'liveupdate.setup.schemeName')}" />
        <s:ComboBox id="cbUpdateNature">
            <s:dataProvider>
            <mx:ArrayList>
                <fx:String>SECURITY</fx:String>
                <fx:String>BUGFIX</fx:String>
                <fx:String>EMERGENCY_BUGFIX</fx:String>
                <fx:String>IMPROVEMENT</fx:String>
                <fx:String>NEW_FEATURE</fx:String>
                <fx:String>UPGRADE</fx:String>
                <fx:String>SERVICE_PACK</fx:String>
                <fx:String>DISTRO</fx:String>
            </mx:ArrayList>
        </s:dataProvider>
        </s:ComboBox>
        <mx:DataGrid id="mailList">
            <mx:columns>
                <mx:DataGridColumn dataField="email" headerText="Email"/>
            </mx:columns>
        </mx:DataGrid>
    </s:HGroup>

    <mx:ControlBar horizontalAlign="center" width="100%" height="100%">
        <s:Button id="submitNotificationScheme"
                  label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.save')}" />
        <s:Button id="cancelNotificationScheme" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>
    </mx:ControlBar>
</mx:Form>
