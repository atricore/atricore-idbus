<s:VGroup xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:components="com.atricore.idbus.console.components.*"
          xmlns:browser="com.atricore.idbus.console.modeling.browser.*"
          xmlns:diagram="com.atricore.idbus.console.modeling.diagram.*"
          xmlns:palette="com.atricore.idbus.console.modeling.palette.*"
          xmlns:propertysheet="com.atricore.idbus.console.modeling.propertysheet.*"
          xmlns:comp="com.atricore.idbus.console.components.*"
          xmlns:ravis="org.un.cava.birdeye.ravis.graphLayout.visual.*"
          xmlns:vc="org.un.cava.birdeye.ravis.components.ui.controls.vgraphControls.*"
          xmlns:lc="org.un.cava.birdeye.ravis.components.ui.controls.layouterControls.*"
          xmlns:flexlib="http://flexlib.googlecode.com/"
          xmlns:properties="com.atricore.idbus.console.account.groupproperties.*"
          width="100%" height="100%"
          name="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.list.panel.label')}"
        >
    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;

        public var icon:Class = EmbeddedIcons.groupsIcon;
        public var iconWidth:Number = 22;
        public var iconHeight:Number = 22;
        ]]>
    </fx:Script>


    <s:HGroup id="buttonBar" width="100%" height="5%"
              paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">

        <components:IconLabelButton id="btnNewGroup"
                                    iconUp="{EmbeddedIcons.addGroupIcon}"
                                    iconWidth="22"  iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.add.panel.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.add.panel.label')}"/>
        <components:IconLabelButton id="btnEditGroup" enabled="false"
                                    iconUp="{EmbeddedIcons.editGroupIcon}"
                                    iconWidth="22"  iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.edit.panel.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.edit.panel.label')}"/>
        <components:IconLabelButton id="btnDeleteGroup" enabled="false"
                                    iconUp="{EmbeddedIcons.deleteGroupIcon}"
                                    iconWidth="22"  iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.delete.panel.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.delete.panel.label')}" />
        <components:IconLabelButton id="btnSearchGroup"
                                    iconUp="{EmbeddedIcons.searchGroupIcon}"
                                    iconWidth="22"  iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.search.panel.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.groups.search.panel.label')}" />
        <components:IconLabelButton id="btnClearSearch"
                                    iconUp="@Embed('/images/icons/close.png')"
                                    iconWidth="16"  iconHeight="16" compHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"  visible="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.search.filters.remove')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.search.filters.remove')}" />
    </s:HGroup>

    <s:VGroup id="bodyHBox" width="100%" height="95%" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
        <mx:DataGrid id="groupList" width="100%" rowCount="10" resizeEffect="Resize" verticalAlign="middle">
            <mx:columns>
                <mx:DataGridColumn dataField="name" headerText="Name"/>
                <mx:DataGridColumn dataField="description" headerText="Description"/>
            </mx:columns>
        </mx:DataGrid>

        <properties:GroupPropertiesView id="properties" width="100%" height="30%" visible="false"/>
    </s:VGroup>

</s:VGroup>
