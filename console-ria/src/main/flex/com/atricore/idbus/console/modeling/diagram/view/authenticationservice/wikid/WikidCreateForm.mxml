<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         defaultButton="{btnOk}" styleName="unpadded" width="100%" height="100%" verticalGap="8">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{wikidName}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
        <mx:StringValidator id="serverHostValidator" source="{serverHost}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
        <mx:NumberValidator id="serverPortValidator" source="{serverPort}" required="true" property="text"
                        minValue="1" maxValue="65535" trigger="{btnOk}" triggerEvent="click"
                        invalidCharError="{resourceManager.getString(AtricoreConsole.BUNDLE, 'location.portValidationError')}"/>
        <utils:WikidServerCodeValidator id="serverCodeValidator" source="{serverCode}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
        <mx:StringValidator id="caStorePassValidator" source="{caStorePass}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
        <mx:StringValidator id="wcStorePassValidator" source="{wcStorePass}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
    </fx:Declarations>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.name')}:" required="true">
        <s:TextInput id="wikidName" width="300" text="wikid"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.description')}:">
        <s:TextInput id="wikidDescription" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.server.host')}:" required="true">
        <s:TextInput id="serverHost" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.server.port')}:" required="true">
        <s:TextInput id="serverPort" width="300" text="8388"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.server.code')}:" required="true">
        <s:TextInput id="serverCode" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.ca.store')}:" required="true">
        <s:VGroup>
            <s:DropDownList id="caStore" width="300" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.ca.store.browse')}"
                            requireSelection="true"/>
            <s:Label id="lblCAStoreMsg" visible="false" includeInLayout="false" paddingTop="5"/>
        </s:VGroup>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.ca.store.pass')}:" required="true">
        <s:TextInput id="caStorePass" width="300" displayAsPassword="true"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.wc.store')}:" required="true">
        <s:VGroup>
            <s:DropDownList id="wcStore" width="300" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.wc.store.browse')}"
                            requireSelection="true"/>
            <s:Label id="lblWCStoreMsg" visible="false" includeInLayout="false" paddingTop="5"/>
        </s:VGroup>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'wikid.wc.store.pass')}:" required="true">
        <s:TextInput id="wcStorePass" width="300" displayAsPassword="true"/>
    </mx:FormItem>

    <mx:ControlBar horizontalAlign="center" width="100%" height="100%">
        <s:Button id="btnOk" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.ok')}"/>
        <s:Button id="btnCancel" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>
    </mx:ControlBar>
</mx:Form>
