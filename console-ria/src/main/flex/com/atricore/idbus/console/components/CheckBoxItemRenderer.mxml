<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer name="CheckBoxItemRenderer"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        dataChange="dataChangeHandler(event);">

    <fx:Script>
        <![CDATA[

        protected function dataChangeHandler(evt:Event):void {
                chkBox.selected = data.isSelected;
                chkBox.label = data.label;
            }

        protected function chkBoxClicked(event:Event):void {
            data.isSelected = chkBox.selected;
        }
        ]]>
    </fx:Script>

    <s:CheckBox id="chkBox" left="3" right="3" top="5" bottom="5" change="chkBoxClicked(event)" />

</s:ItemRenderer>
