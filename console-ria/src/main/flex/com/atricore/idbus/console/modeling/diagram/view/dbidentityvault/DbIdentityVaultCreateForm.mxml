<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         defaultButton="{btnOk}" styleName="unpadded" width="100%" height="100%" verticalGap="8">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{identityVaultName}" required="true" property="text" trigger="{btnOk}"
                             triggerEvent="click"/>

        <utils:PasswordValidator id="pwvPasswords" source="{password}" property="text" required="false"
                                 matchSource="{passwordRetype}" matchProperty="text" defaultLength="-1"
                                 noMatchError="Passwords do not match"/>

    </fx:Declarations>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'identityVault.name')}:" required="true">
        <s:TextInput id="identityVaultName" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'identityVault.description')}:">
        <s:TextInput id="identityVaultDescription" width="300"/>
    </mx:FormItem>

    <mx:TabNavigator id="coreNavigator" borderStyle="solid" width="100%" height="300" creationPolicy="all" tabHeight="26">

        <s:NavigatorContent id="identityVaultCoreTab" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.core')}">
            <s:VGroup >

                <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.hashAlgorithm')}:">
                    <s:DropDownList id="identityVaultHashAlgorithm" width="140" selectedIndex="0">
                        <s:dataProvider>
                            <mx:ArrayCollection>
                                <fx:Object label="MD5" data="MD5"/>
                                <fx:Object label="SHA-1" data="SHA-1"/>
                                <fx:Object label="SHA-256" data="SHA-256"/>
                                <fx:Object label="PLain Text (none)" data="NONE"/>
                            </mx:ArrayCollection>
                        </s:dataProvider>
                    </s:DropDownList>
                </mx:FormItem>

                <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.hashEncoding')}:">
                    <s:DropDownList id="identityVaultHashEncoding" width="140" selectedIndex="0">
                        <s:dataProvider>
                            <mx:ArrayCollection>
                                <fx:Object label="HEX" data="HEX"/>
                                <fx:Object label="BASE64" data="BASE64"/>
                                <fx:Object label="Plain Text (none)" data="NONE"/>
                            </mx:ArrayCollection>
                        </s:dataProvider>
                    </s:DropDownList>
                </mx:FormItem>

                <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.saltLength')}:">
                    <s:DropDownList id="identityVaultSaltLength" width="140" selectedIndex="0">
                        <s:dataProvider>
                            <mx:ArrayCollection>
                                <fx:Object label="None" data="0"/>
                                <fx:Object label="8-bit" data="1"/>
                                <fx:Object label="16-bit" data="2"/>
                                <fx:Object label="24-bit" data="3"/>
                                <fx:Object label="32-bit" data="4"/>
                                <fx:Object label="48-bit" data="6"/>
                                <fx:Object label="64-bit" data="8"/>
                                <fx:Object label="128-bit" data="16"/>
                                <fx:Object label="256-bit" data="32"/>
                            </mx:ArrayCollection>
                        </s:dataProvider>
                    </s:DropDownList>
                </mx:FormItem>

                <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.username')}:" required="true">
                    <s:TextInput id="username" width="200"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.password')}:" required="true">
                    <s:TextInput id="password" width="200" displayAsPassword="true"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.passwordRetype')}:" required="true">
                    <mx:TextInput id="passwordRetype" width="200" displayAsPassword="true"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="120">
                    <s:CheckBox id="externalDB" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.externalDB')}"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.driverName')}:" required="false">
                    <s:DropDownList id="driver" width="200" labelField="name" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.driverName.prompt')}"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'dbIdentityVault.connectionUrl')}:" required="false">
                    <s:TextInput id="connectionUrl" width="200"/>
                </mx:FormItem>
            </s:VGroup>
        </s:NavigatorContent>
    </mx:TabNavigator>



    <mx:ControlBar horizontalAlign="center" width="100%" height="100%">
        <s:Button id="btnOk" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.ok')}"/>
        <s:Button id="btnCancel" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>
    </mx:ControlBar>
</mx:Form>
