<s:Panel xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:components="com.atricore.idbus.console.components.*"
         xmlns:comp="com.atricore.idbus.console.components.*"
         xmlns:ravis="org.un.cava.birdeye.ravis.graphLayout.visual.*"
         xmlns:vc="org.un.cava.birdeye.ravis.components.ui.controls.vgraphControls.*"
         xmlns:lc="org.un.cava.birdeye.ravis.components.ui.controls.layouterControls.*"
         horizontalCenter="0" verticalCenter="0"
         skinClass="com.atricore.idbus.console.skin.panel.RightTitleBarPanelSkin"
        >

    <s:layout>
        <s:VerticalLayout/>
    </s:layout>

    <fx:Script>
        <![CDATA[
        import mx.controls.scrollClasses.ScrollBar;

        import org.un.cava.birdeye.ravis.graphLayout.visual.VisualGraph;
    ]]>
    </fx:Script>

    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <s:Scroller id="graphScroller" horizontalScrollPolicy="on" verticalScrollPolicy="on" visible="false">
        <s:Group id="graphViewport" width="{this.width - ScrollBar.THICKNESS}" height="{this.height - ScrollBar.THICKNESS * 2}">
            <comp:GraphCanvas id="graphCanvas" width="2000" height="1000">
                <comp:CustomVisualGraph id="identityApplianceDiagram" width="100%" height="100%"
                                        left="0" right="0" top="0" bottom="0" alpha="1"
                                        resize="identityApplianceDiagram.draw(VisualGraph.DF_RESET_LL)"
                                        visibilityLimitActive="true"
                        >
                </comp:CustomVisualGraph>
            </comp:GraphCanvas>
        </s:Group>
    </s:Scroller>
</s:Panel>

