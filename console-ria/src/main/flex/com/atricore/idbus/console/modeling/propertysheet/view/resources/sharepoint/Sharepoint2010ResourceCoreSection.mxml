<s:Group xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         width="100%" height="100%">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{resourceName}" required="true" property="text"
                        triggerEvent="click"/>

        <mx:NumberValidator id="appPortValidator" source="{appResourcePort}" required="false" property="text" minValue="1" maxValue="65535"
                            invalidCharError="{resourceManager.getString(AtricoreConsole.BUNDLE, 'location.portValidationError')}"/>

        <utils:URLPartValidator id="appDomainValidator" source="{appResourceDomain}" required="true" property="text"/>
        <utils:URLPartValidator id="appContextValidator" source="{appResourceContext}" required="true" property="text"/>
        <utils:URLMultipartValidator id="appPathValidator" source="{appResourcePath}" required="false" property="text"/>

        <mx:NumberValidator id="portValidator" source="{resourcePort}" required="false" property="text" minValue="1" maxValue="65535"
                            invalidCharError="{resourceManager.getString(AtricoreConsole.BUNDLE, 'location.portValidationError')}"/>

        <utils:URLPartValidator id="domainValidator" source="{resourceDomain}" required="true" property="text"/>
        <utils:URLPartValidator id="contextValidator" source="{resourceContext}" required="true" property="text"/>
        <utils:URLMultipartValidator id="pathValidator" source="{resourcePath}" required="false" property="text"/>

    </fx:Declarations>

    <mx:Form width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" verticalGap="8" labelWidth="140">
        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.name')}:" required="true">
            <s:TextInput id="resourceName" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.description')}:">
            <s:TextInput id="resourceDescription" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.appLocation')}:" required="true"
                     direction="horizontal" >
            <s:DropDownList id="appResourceProtocol" width="70" selectedIndex="0">
                <s:dataProvider>
                    <mx:ArrayCollection>
                        <fx:Object label="http" data="http"/>
                        <fx:Object label="https" data="https"/>
                    </mx:ArrayCollection>
                </s:dataProvider>
            </s:DropDownList>
            <s:Label text="://" width="9" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="appResourceDomain" width="150"/>
            <s:Label text=":" width="1" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="appResourcePort" width="40" />
            <s:Label text="/" width="2" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="appResourceContext" width="100"/>
            <s:Label text="/" width="2" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="appResourcePath" width="140"/>
        </mx:FormItem>


        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.stsLocation')}:" required="true"
                     direction="horizontal" >
            <s:DropDownList id="resourceProtocol" width="70" selectedIndex="0">
                <s:dataProvider>
                    <mx:ArrayCollection>
                        <fx:Object label="http" data="http"/>
                        <fx:Object label="https" data="https"/>
                    </mx:ArrayCollection>
                </s:dataProvider>
            </s:DropDownList>
            <s:Label text="://" width="9" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="resourceDomain" width="150"/>
            <s:Label text=":" width="1" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="resourcePort" width="40" />
            <s:Label text="/" width="2" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="resourceContext" width="100"/>
            <s:Label text="/" width="2" paddingLeft="-5" paddingTop="5"/>
            <s:TextInput id="resourcePath" width="140"/>
        </mx:FormItem>


        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.signingCertificateSubject')}:">
            <s:TextInput id="resourceSigningCertSubject" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.encryptingCertificateSubject')}:">
            <s:TextInput id="resourceEncryptingCertSubject" width="300"/>
        </mx:FormItem>

        <!-- Sharepoint WS-Fed STS Metadata upload
        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.metadata')}:">
            <s:DropDownList id="resourceMetadataFile" width="170" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.metadata.browseFile')}"
                            requireSelection="true"/>
        </mx:FormItem>
        <s:Label id="lblUploadMsg" text="{resourceManager.getString(AtricoreConsole.BUNDLE, 'resource.sharepoint.metadata.uploadSuccess')}" visible="false" paddingLeft="95"/>
        -->

    </mx:Form>
</s:Group>