<s:Group xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         width="100%" height="100%">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{authName}" required="true" property="text"/>
    </fx:Declarations>

    <mx:Form paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" width="100%" height="100%" verticalGap="8">
        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.name')}:" required="true">
            <s:TextInput id="authName" width="200"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.hashAlgorithm')}:">
            <s:DropDownList id="hashAlgorithm" width="140" selectedIndex="0">
                <s:dataProvider>
                    <mx:ArrayCollection>

                        <fx:Object label="MD5" data="MD5"/>
                        <fx:Object label="SHA-1" data="SHA-1"/>
                        <fx:Object label="SHA-256" data="SHA-256"/>
                        <fx:Object label="CRYPT (LDAP Only)" data="CRYPT"/>
                        <fx:Object label="PLain Text (none)" data="NONE"/>
                    </mx:ArrayCollection>
                </s:dataProvider>
            </s:DropDownList>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.hashEncoding')}:">
            <s:DropDownList id="hashEncoding" width="140" selectedIndex="0">
                <s:dataProvider>
                    <mx:ArrayCollection>
                        <fx:Object label="HEX" data="HEX"/>
                        <fx:Object label="BASE64" data="BASE64"/>
                        <fx:Object label="Plain Text (none)" data="NONE"/>
                    </mx:ArrayCollection>
                </s:dataProvider>
            </s:DropDownList>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.ignoreUsernameCase')}:">
            <s:CheckBox id="ignoreUsernameCase"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.ignorePasswordCase')}:">
            <s:CheckBox id="ignorePasswordCase"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.impersonateUserPolicy')}:">
            <s:DropDownList id="impersonateUserPoliciesCombo" width="240" labelField="name" selectedIndex="0" requireSelection="true"/>
        </mx:FormItem>


    </mx:Form>
</s:Group>
