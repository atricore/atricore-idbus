    <!--<utils:ValidatingForm id="identityProvForm" width="100%" height="100%" defaultButton="{btnOk}">-->
<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         defaultButton="{btnOk}" styleName="unpadded" width="100%" height="100%" verticalGap="8">

    <fx:Declarations>
        <mx:StringValidator id="nameValidator" source="{executionEnvironmentName}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
        <mx:StringValidator id="homeDirValidator" source="{homeDirectory}" required="true" property="text" trigger="{btnOk}"
                        triggerEvent="click"/>
    </fx:Declarations>
    
    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'executionenvironment.name')}:" required="true">
        <s:TextInput id="executionEnvironmentName" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'executionenvironment.description')}:">
        <s:TextInput id="executionEnvironmentDescription" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'executionenvironment.selectedhost')}:"
            direction="horizontal">
        <s:DropDownList id="selectedHost" width="300" selectedIndex="0">
            <s:dataProvider>
                <mx:ArrayCollection>
                    <fx:Object label="Local" data="local"/>
                </mx:ArrayCollection>
            </s:dataProvider>
        </s:DropDownList>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'executionenvironment.homedir')}:" required="true">
        <s:TextInput id="homeDirectory" width="300"/>
    </mx:FormItem>


    <!-- TODO: create custom panel skin to change controlBarContent style? or use mx:ControlBar? -->
    <s:Panel id="controlBarPanel" width="100%" height="40" borderVisible="false"
            horizontalCenter="0" verticalCenter="0" contentBackgroundAlpha="0" dropShadowVisible="false"
            creationComplete="controlBarPanel.titleDisplay.height=controlBarPanel.titleDisplay.minHeight=0;">
        <s:controlBarContent>
            <s:Button id="btnCancel" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>
            <s:Button id="btnOk" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.ok')}" enabled="true"/>
        </s:controlBarContent>
        <s:controlBarLayout>
            <s:HorizontalLayout horizontalAlign="center"/>
        </s:controlBarLayout>
    </s:Panel>
    <fx:Script><![CDATA[
        import com.atricore.idbus.console.modeling.diagram.view.executionenvironment.*;
        ]]></fx:Script>
</mx:Form>
