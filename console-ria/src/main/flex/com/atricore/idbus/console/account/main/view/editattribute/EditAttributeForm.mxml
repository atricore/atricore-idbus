<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         defaultButton="{submitEditAttributeButton}" styleName="unpadded"
         width="100%" height="100%" verticalGap="8">

    <fx:Script><![CDATA[
        import mx.collections.ArrayCollection;
        ]]>
    </fx:Script>

    <fx:Declarations>
        <mx:StringValidator id="nameAttributeValidator"  source="{nameAttribute}" required="true" property="text" />
    </fx:Declarations>

    <s:VGroup width="100%"
              paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">

        <mx:FormHeading label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.edit.form.heading')}"/>

        <mx:HRule width="100%"/>

        <mx:FormItem labelWidth="100" required="true"
                     label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.add.entity')}">
            <s:DropDownList id="cbEntity" width="200" enabled="false">
                <s:dataProvider>
                    <mx:ArrayList>
                        <fx:String>User</fx:String>
                        <fx:String>Group</fx:String>
                    </mx:ArrayList>
                </s:dataProvider>
            </s:DropDownList>
        </mx:FormItem>

        <mx:FormItem labelWidth="100" required="true"
                     label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.add.name')}:">
            <s:TextInput id="nameAttribute" width="200" />
        </mx:FormItem>
        <mx:FormItem labelWidth="100" required="false"
                     label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.add.description')}:">
            <s:TextArea id="descAttribute" heightInLines="2" width="200" />
        </mx:FormItem>
        <mx:FormItem labelWidth="100" required="true"
                     label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.add.type')}">
            <s:DropDownList id="cbType" width="200" dataProvider="{new ArrayCollection(resourceManager.getString(AtricoreConsole.BUNDLE,
         'provisioning.schema.attribute.add.typeenum').split(','))}" enabled="false"/>
        </mx:FormItem>
        <mx:FormItem labelWidth="100" required="true"
                     label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.add.required')}:">
            <s:CheckBox id="required" width="300" />
        </mx:FormItem>
        <mx:FormItem labelWidth="100" required="true"
                     label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.attribute.add.multivalued')}:">
            <s:CheckBox id="multivalued" width="300" />
        </mx:FormItem>
    </s:VGroup>

    <s:HGroup horizontalAlign="center" width="100%" paddingTop="10">
        <s:Button id="submitEditAttributeButton"
                  label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.save')}" />
        <s:Button id="cancelEditAttribute" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>
    </s:HGroup>

</mx:Form>
