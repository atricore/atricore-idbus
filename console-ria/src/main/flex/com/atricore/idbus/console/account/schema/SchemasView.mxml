<s:VGroup xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:components="com.atricore.idbus.console.components.*"
          xmlns:properties="com.atricore.idbus.console.account.propertysheet.schema.*"
          width="100%" height="100%"
          name="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.panel.title')}"
        >
    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;

        public var icon:Class = EmbeddedIcons.schemasIcon;
        public var iconWidth:Number = 22;
        public var iconHeight:Number = 22;
        ]]>
    </fx:Script>


    <s:HGroup id="buttonBar" width="100%" height="5%"
              paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">

        <s:Label paddingTop="8" text="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.list.entity')}" />

        <s:DropDownList id="cbEntity" width="150" selectedIndex="0">
            <s:dataProvider>
                <mx:ArrayList>
                    <fx:String>User</fx:String>
                    <fx:String>Group</fx:String>
                </mx:ArrayList>
            </s:dataProvider>
        </s:DropDownList>

        <components:IconLabelButton id="btnCreateAttribute"
                                    iconUp="{EmbeddedIcons.addGroupIcon}"
                                    iconWidth="22" iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.create.attribute.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.create.attribute.label')}"/>
        <components:IconLabelButton id="btnEditAttribute" enabled="false"
                                    iconUp="{EmbeddedIcons.editGroupIcon}"
                                    iconWidth="22" iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.edit.attribute.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.edit.attribute.label')}"/>
        <components:IconLabelButton id="btnDeleteAttribute" enabled="false"
                                    iconUp="{EmbeddedIcons.deleteGroupIcon}"
                                    iconWidth="22" iconHeight="22"
                                    paddingTop="3" paddingLeft="3" isLinkButton="false"
                                    skinClass="com.atricore.idbus.console.skin.button.IconLabelButtonSkin"
                                    toolTip="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schemas.delete.attribute.label')}"
                                    label="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schemas.delete.attribute.label')}"/>
    </s:HGroup>

    <s:VGroup id="bodyHBox" width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
        <mx:DataGrid id="schemaAttrList" width="100%" rowCount="10"
                     resizeEffect="Resize" verticalAlign="middle">
            <mx:columns>
                <mx:DataGridColumn dataField="name"
                                   headerText="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.list.attribute')}"/>
                <mx:DataGridColumn dataField="description"
                                   headerText="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.list.description')}"/>
                <mx:DataGridColumn dataField="type"
                                   headerText="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.list.type')}"/>
                <mx:DataGridColumn dataField="required"
                                   headerText="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.list.required')}"/>
                <mx:DataGridColumn dataField="multivalued"
                                   headerText="{resourceManager.getString(AtricoreConsole.BUNDLE,  'provisioning.schema.list.multivalued')}"/>
            </mx:columns>
        </mx:DataGrid>
    </s:VGroup>

</s:VGroup>
