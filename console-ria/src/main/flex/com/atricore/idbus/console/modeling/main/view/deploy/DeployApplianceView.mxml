<mx:Form xmlns:mx="http://www.adobe.com/2006/mxml"
         xmlns:utils="com.atricore.idbus.console.components.*"
         defaultButton="{btnNext}" styleName="unpadded" width="100%" height="100%" verticalGap="8">

    <utils:TitledBorderBox title="{resourceManager.getString(AtricoreConsole.BUNDLE, 'idappliance.deploy.options.title')}"
                           width="400" height="150" cornerRadius="5" paddingLeft="10" paddingRight="5" paddingTop="20" paddingBottom="5">
        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'idappliance.deploy.options.selectedAppliance')}" labelWidth="130" paddingTop="35" paddingLeft="35">
            <mx:TextInput id="selectedAppliance" editable="false" />
        </mx:FormItem>

        <mx:FormItem labelWidth="130" paddingLeft="35">
            <mx:CheckBox id="startAppliance" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'idappliance.deploy.options.startAppliance')}"/>
        </mx:FormItem>
    </utils:TitledBorderBox>

    <mx:HBox width="100%">
        <mx:Spacer width="325"/>
        <mx:Button id="btnNext" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'idappliance.deploy.options.deploy')}"/>
    </mx:HBox>
</mx:Form>
