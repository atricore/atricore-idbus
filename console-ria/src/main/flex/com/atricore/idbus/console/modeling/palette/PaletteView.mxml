<mx:Accordion xmlns:mx="http://www.adobe.com/2006/mxml"
              paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5"
>
   <mx:Repeater id="rptPaletteRoot">
        <mx:Repeater id="rptPaletteDrawers" dataProvider="{rptPaletteRoot.currentItem.children}">
            <mx:VBox width="100%" height="100%" label="{rptPaletteDrawers.currentItem.label}">
                <mx:List width="100%" height="100%"
                        dataProvider="{rptPaletteDrawers.currentItem.children}">
                    <mx:itemRenderer>
                        <mx:Component>
                            <mx:Text click="dispatchEvent(new PaletteEvent(true, true, data, PaletteEvent.ACTION_PALETTE_ITEM_CLICKED));" text="{data.label}" width="100%" >
                                <mx:Script><![CDATA[
                                    import com.atricore.idbus.console.modeling.palette.event.PaletteEvent;
                                    ]]></mx:Script>
                            </mx:Text>
                        </mx:Component>
                    </mx:itemRenderer>
                </mx:List>
            </mx:VBox>
        </mx:Repeater>
    </mx:Repeater>
</mx:Accordion>
