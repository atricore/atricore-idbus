<mx:Accordion xmlns:mx="library://ns.adobe.com/flex/mx"
              xmlns:fx="http://ns.adobe.com/mxml/2009"
              xmlns:s="library://ns.adobe.com/flex/spark"
              paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" fontWeight="bold"
>
    <mx:Repeater id="rptPaletteRoot">
        <mx:Repeater id="rptPaletteDrawers" dataProvider="{rptPaletteRoot.currentItem.children}">
            <mx:HBox width="100%" height="100%" label="{rptPaletteDrawers.currentItem.label}" fontWeight="normal"
                     minWidth="100" minHeight="0">
                <s:ButtonBar height="100%"
                             width="100%"
                             requireSelection="false"
                             skinClass="com.atricore.idbus.console.modeling.palette.PaletteDrawerButtonBarSkin"
                             dataProvider="{rptPaletteDrawers.currentItem.children}"
                             change="dispatchEvent(new PaletteEvent(true, true, event.target, event.target.selectedItem, PaletteEvent.ACTION_PALETTE_ITEM_CLICKED));">
                </s:ButtonBar>
            </mx:HBox>
        </mx:Repeater>
    </mx:Repeater>
    <fx:Script><![CDATA[
        import com.atricore.idbus.console.modeling.palette.event.PaletteEvent;
        ]]></fx:Script>
</mx:Accordion>
