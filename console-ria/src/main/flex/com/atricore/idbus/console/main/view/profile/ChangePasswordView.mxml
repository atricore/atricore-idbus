<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         width="100%" height="100%" defaultButton="{btnConfirm}"
         styleName="unpadded" verticalGap="8"
         paddingTop="50" paddingBottom="10" paddingLeft="10" paddingRight="10">
    <fx:Declarations>
        <mx:StringValidator id="oldPasswordValidator" required="true" source="{oldPassword}" property="text"/>
        <mx:StringValidator id="newPasswordValidator" required="true" source="{newPassword}" property="text"/>
    </fx:Declarations>

    <mx:FormItem required="true" label="Old Password" labelWidth="120">
        <mx:TextInput id="oldPassword" displayAsPassword="true" width="200"/>
    </mx:FormItem>
    <mx:FormItem required="true" label="New Password" labelWidth="120">
        <mx:TextInput id="newPassword" displayAsPassword="true" width="200"/>
    </mx:FormItem>
    <mx:FormItem x="180">
        <mx:Button id="btnConfirm" label="Confirm"/>
    </mx:FormItem>
</mx:Form>


