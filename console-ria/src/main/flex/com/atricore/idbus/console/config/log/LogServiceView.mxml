<s:Panel xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         width="100%" height="100%"
         skinClass="com.atricore.idbus.console.skin.panel.NoTitleBarPanelSkin"
        >

    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Declarations>

    </fx:Declarations>

    <s:Group width="100%" height="100%">

        <mx:Form width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" verticalGap="8">
            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'config.log.serviceMode')}:">
                <s:DropDownList id="serviceMode" width="150" selectedIndex="0"/>
            </mx:FormItem>

            <mx:DataGrid id="customLogData" width="460" height="200" editable="false" visible="false" includeInLayout="false">
                <mx:columns>
                    <mx:DataGridColumn headerText="Category" width="400" dataField="category"/>
                    <mx:DataGridColumn headerText="Level" width="60" dataField="level"/>
                </mx:columns>
            </mx:DataGrid>

            <s:Button id="btnSave" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'config.log.save')}" enabled="false"/>
        </mx:Form>

    </s:Group>

</s:Panel>
