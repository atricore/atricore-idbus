<AppSectionView xmlns="com.atricore.idbus.console.base.extensions.appsection.*"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:comp="com.atricore.idbus.console.components.*"
         width="100%" height="100%"
         skinClass="com.atricore.idbus.console.skin.panel.NoTitleBarPanelSkin"
         name="{resourceManager.getString(AtricoreConsole.BUNDLE, 'main.accountTab.name')}"
        >

    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;

        import mx.collections.ArrayCollection;

        public var icon:Class = EmbeddedIcons.accountMiniIcon;
        ]]>
    </fx:Script>

    <s:VGroup x="10" y="10" height="100%" width="100%"
              paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">

        <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'embeddedIdentityVault.connectorName')}:" required="false">
            <s:DropDownList id="idVault" width="200" labelField="description" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'embeddedIdentityVault.connectorName.prompt')}"/>
        </mx:FormItem>

        <s:TabBar id="accountManagementTabBar" dataProvider="{new ArrayCollection(vsAccountMng.content)}"
                  labelField="name" skinClass="com.atricore.idbus.console.skin.tabbar.IconTabBarSkin"/>

        <comp:CustomViewStack id="vsAccountMng" creationPolicy="all" borderVisible="false"
                              width="100%" height="100%" />
    </s:VGroup>

</AppSectionView>
