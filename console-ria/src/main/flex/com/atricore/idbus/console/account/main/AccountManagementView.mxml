<AppSectionView xmlns="com.atricore.idbus.console.main.*"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:components="com.atricore.idbus.console.components.*"
         xmlns:browser="com.atricore.idbus.console.modeling.browser.*"
         xmlns:diagram="com.atricore.idbus.console.modeling.diagram.*"
         xmlns:palette="com.atricore.idbus.console.modeling.palette.*"
         xmlns:propertysheet="com.atricore.idbus.console.modeling.propertysheet.*"
         xmlns:comp="com.atricore.idbus.console.components.*"
         xmlns:ravis="org.un.cava.birdeye.ravis.graphLayout.visual.*"
         xmlns:graph-ctrl="com.atricore.idbus.console.modeling.diagram.ui.control.*"
         xmlns:vc="org.un.cava.birdeye.ravis.components.ui.controls.vgraphControls.*"
         xmlns:lc="org.un.cava.birdeye.ravis.components.ui.controls.layouterControls.*"
         xmlns:group="com.atricore.idbus.console.account.groups.*"
         xmlns:user="com.atricore.idbus.console.account.users.*"
         width="100%" height="100%"
         skinClass="com.atricore.idbus.console.skin.panel.NoTitleBarPanelSkin"
         name="{resourceManager.getString(AtricoreConsole.BUNDLE, 'main.accountTab.name')}"
        >

    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;
        import mx.collections.ArrayCollection;
        public var icon:Class = EmbeddedIcons.accountMiniIcon;
        ]]>
    </fx:Script>

    <s:VGroup x="10" y="10" height="100%" width="100%"
              paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
        <s:TabBar id="accountManagementTabBar" dataProvider="{new ArrayCollection(vsAccountMng.content)}"
                  labelField="name" skinClass="com.atricore.idbus.console.skin.tabbar.IconTabBarSkin"/>

        <comp:CustomViewStack id="vsAccountMng" creationPolicy="all" borderVisible="false"
                              width="100%" height="100%" />
    </s:VGroup>

</AppSectionView>
