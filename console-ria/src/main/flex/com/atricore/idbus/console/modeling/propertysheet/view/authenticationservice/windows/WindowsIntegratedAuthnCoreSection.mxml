<s:HGroup xmlns:mx="library://ns.adobe.com/flex/mx"
          xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:utils="com.atricore.idbus.console.components.*" height="100%" width="100%" paddingLeft="5"
          paddingRight="5" paddingTop="5" paddingBottom="5">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{nodeName}" required="true" property="text"/>

        <mx:StringValidator id="domainValidator" source="{domain}" required="true" property="text"/>

        <mx:StringValidator id="hostValidator" source="{host}" required="true" property="text"/>

        <mx:StringValidator id="serviceNameValidator" source="{serviceName}" required="false" property="text"/>

        <mx:StringValidator id="domainControllerValidator" source="{domainController}" required="true" property="text"/>


        <mx:NumberValidator id="portValidator" source="{port}" required="false" property="text" minValue="1"
                            maxValue="65535"
                            invalidCharError="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.portValidationError')}"/>
        <s:Fade id="fadeFx" alphaFrom="1" alphaTo="0" duration="2000" startDelay="2000"/>
    </fx:Declarations>

    <mx:Form paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" width="100%" height="100%"
             verticalGap="8" labelWidth="140">

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.name')}:"
                     required="true">
            <s:TextInput id="nodeName" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.description')}:">
            <s:TextInput id="description" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.protocol')}:"
                     required="true">
            <s:DropDownList id="protocol" selectedIndex="0" width="180">
                <s:dataProvider>
                    <mx:ArrayCollection>
                        <fx:Object label="Kerberos" data="kerberos"/>
                        <fx:Object label="NTLM v2" data="ntlmv2"/>
                    </mx:ArrayCollection>
                </s:dataProvider>
            </s:DropDownList>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.domain')}:"
                     required="true">
            <s:TextInput id="domain" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.serviceClass')}:"
                     required="true">
            <s:DropDownList id="serviceClass" selectedIndex="0" width="180">
                <s:dataProvider>
                    <mx:ArrayCollection>
                        <fx:Object label="HTTP" data="HTTP"/>
                    </mx:ArrayCollection>
                </s:dataProvider>
            </s:DropDownList>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.host')}:"
                     required="true">
            <s:TextInput id="host" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.port')}:"
                     required="false">
            <s:TextInput id="port" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.serviceName')}:"
                     required="false">
            <s:TextInput id="serviceName" width="300"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.domainController')}:"
                     required="true">
            <s:TextInput id="domainController" width="300"/>
        </mx:FormItem>


        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.overwriteKerberosSetup')}:">
            <s:CheckBox id="overwriteKerberosSetup" selected="true"/>
        </mx:FormItem>

        <mx:FormItem
                label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.keyTab')}:" >
            <s:DropDownList id="keyTabFile" width="170" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.keyTab.browseFile')}"
                            requireSelection="true"/>
        </mx:FormItem>
        <s:Label id="lblUploadMsg" text="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.keyTab.uploadSuccess')}" visible="false" paddingLeft="95"/>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'windowsIntegratedAuthn.spn')}:"
                     required="false">
            <s:TextInput id="servicePrincipalName" width="300" editable="false"/>
        </mx:FormItem>



    </mx:Form>

</s:HGroup>
