<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         defaultButton="{submitSearchUsersButton}" styleName="unpadded"
         width="100%" height="100%" verticalGap="8">

    <fx:Declarations>
        <mx:StringValidator id="usernameUserValidator" source="{userUsername}" property="text"/>
        <mx:StringValidator id="firstnameUserValidator" source="{userFirstName}" property="text"/>
        <mx:StringValidator id="lastnameUserValidator" source="{userLastname}" property="text"/>

    </fx:Declarations>

    <mx:FormHeading label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.users.search.form.heading')}"/>

    <mx:HRule width="100%"/>


    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.users.username')}:">
        <mx:TextInput id="userUsername" width="150"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.users.firstname')}:">
        <mx:TextInput id="userFirstName" width="150"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.users.lastname')}:">
        <mx:TextInput id="userLastname" width="150"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.users.fullname')}:">
        <mx:TextInput id="userFullname" editable="false" width="150"/>
    </mx:FormItem>


    <mx:ControlBar horizontalAlign="center" width="100%" height="100%">
        <s:Button id="cancelSearchUsers" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>

        <s:Button id="submitSearchUsersButton"
                  label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.search')}" />
    </mx:ControlBar>
</mx:Form>
