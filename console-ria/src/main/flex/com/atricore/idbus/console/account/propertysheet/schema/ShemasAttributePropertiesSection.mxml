         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         width="100%" height="100%">

    <mx:Form width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" verticalGap="8"
             label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.details.tab.label')}">

