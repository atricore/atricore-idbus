            <mx:Label id="schEntity" text="---"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.list.attribute')}:">
            <mx:Label id="schAttribute" text="---"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.list.type')}:">
            <mx:Label id="schType" text="---"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.list.required')}:">
            <mx:Label id="schRequired" text="---"/>
        </mx:FormItem>

        <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'provisioning.schema.list.multivalued')}:">
            <mx:Label id="schMultivalued" text="---"/>
        </mx:FormItem>

    </mx:Form>
