<s:HGroup xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*" height="100%" width="100%" paddingLeft="5"
         paddingRight="5" paddingTop="5" paddingBottom="5">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{simpleAuthnName}" required="true" property="text"/>
    </fx:Declarations>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;
        import com.atricore.idbus.console.services.dto.AuthenticationMechanism;
        import com.atricore.idbus.console.services.dto.BasicAuthentication;
        import com.atricore.idbus.console.services.dto.BindAuthentication;
        import com.atricore.idbus.console.services.dto.ClientCertAuthentication;
        import com.atricore.idbus.console.services.dto.DominoAuthentication;
        import com.atricore.idbus.console.services.dto.JBossEPPAuthentication;
        import com.atricore.idbus.console.services.dto.TwoFactorAuthentication;
        import com.atricore.idbus.console.services.dto.WindowsAuthentication;

        private function authenticationMechanismsIconFunction(item:AuthenticationMechanism):Class {
            var iconClass:Class;
            if (item is BasicAuthentication) {
                iconClass = EmbeddedIcons.identityVerificationMiniIcon;
            } else if (item is BindAuthentication) {
                iconClass = EmbeddedIcons.directoryAuthenticationServiceMiniIcon;
            } else if (item is TwoFactorAuthentication) {
                iconClass = EmbeddedIcons.wikidAuthenticationServiceMiniIcon;
            } else if (item is DominoAuthentication) {
                iconClass = EmbeddedIcons.dominoAuthenticationServiceMiniIcon;
            } else if (item is ClientCertAuthentication) {
                iconClass = EmbeddedIcons.clientAuthenticationServiceMiniCertIcon;
            } else if (item is JBossEPPAuthentication) {
                iconClass = EmbeddedIcons.jbosseppAuthenticationMiniIcon;
            } else if (item is WindowsAuthentication) {
                iconClass = EmbeddedIcons.windowsAuthenticationServiceMiniIcon;
            }
            return iconClass;
        }
        ]]>
    </fx:Script>

    <utils:TitledBorderBox title="Basic Authentication" height="100%" width="50%" paddingLeft="5" paddingRight="5" paddingTop="15"
                           paddingBottom="5">
        <mx:Form paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" width="100%" height="100%" verticalGap="8">
            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.name')}:" required="true">
                <s:TextInput id="simpleAuthnName" width="200" editable="false"/>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.enabled')}:">
                <s:CheckBox id="simpleAuthnEnabled"/>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.hashAlgorithm')}:">
                <s:DropDownList id="simpleAuthnHashAlgorithm" width="140" selectedIndex="0">
                    <s:dataProvider>
                        <mx:ArrayCollection>
                            <fx:Object label="MD5" data="MD5"/>
                            <fx:Object label="SHA-1" data="SHA-1"/>
                            <fx:Object label="SHA-256" data="SHA-256"/>
                            <fx:Object label="CRYPT (LDAP Only)" data="CRYPT"/>
                            <fx:Object label="PLain Text (none)" data="NONE"/>
                        </mx:ArrayCollection>
                    </s:dataProvider>
                </s:DropDownList>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.hashEncoding')}:">
                <s:DropDownList id="simpleAuthnHashEncoding" width="140" selectedIndex="0">
                    <s:dataProvider>
                        <mx:ArrayCollection>
                            <fx:Object label="HEX" data="HEX"/>
                            <fx:Object label="BASE64" data="BASE64"/>
                            <fx:Object label="Plain Text (none)" data="NONE"/>
                        </mx:ArrayCollection>
                    </s:dataProvider>
                </s:DropDownList>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.saltLength')}:">
                <s:DropDownList id="simpleAuthnSaltLength" width="140" selectedIndex="0">
                    <s:dataProvider>
                        <mx:ArrayCollection>
                            <fx:Object label="None" data="0"/>
                            <fx:Object label="8-bit" data="1"/>
                            <fx:Object label="16-bit" data="2"/>
                            <fx:Object label="24-bit" data="3"/>
                            <fx:Object label="32-bit" data="4"/>
                            <fx:Object label="48-bit" data="6"/>
                            <fx:Object label="64-bit" data="8"/>
                            <fx:Object label="128-bit" data="16"/>
                            <fx:Object label="256-bit" data="32"/>
                        </mx:ArrayCollection>
                    </s:dataProvider>
                </s:DropDownList>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.ignoreUsernameCase')}:">
                <s:CheckBox id="simpleAuthnIgnoreUsernameCase"/>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.ignorePasswordCase')}:">
                <s:CheckBox id="simpleAuthnIgnorePasswordCase"/>
            </mx:FormItem>

            <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'basicAuthentication.impersonateUserPolicy')}:">
                <s:DropDownList id="simpleAuthnImpersonateUserPoliciesCombo" width="240" labelField="name" selectedIndex="0" requireSelection="true"/>
            </mx:FormItem>


        </mx:Form>
    </utils:TitledBorderBox>
    <utils:TitledBorderBox title="Authentication schemes" height="100%" width="50%" paddingLeft="5"
                           paddingRight="5" paddingTop="5" paddingBottom="5">
        <mx:Form paddingLeft="5" paddingRight="5" paddingTop="15" paddingBottom="5" width="100%" height="100%"
                 verticalGap="8">

            <mx:Tree id="authenticationMechanisms"
                     showRoot="false"
                     labelField="displayName"
                     iconFunction="authenticationMechanismsIconFunction"
                     alternatingItemColors="[0xEFF3FA, 0xFFFFFF]"
                     dragEnabled="true"
                     dropEnabled="true"
                     allowMultipleSelection="true"
                     width="250"
                     height="100%"/>

        </mx:Form>
    </utils:TitledBorderBox>
</s:HGroup>