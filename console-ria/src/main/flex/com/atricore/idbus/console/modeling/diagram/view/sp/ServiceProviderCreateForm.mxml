<mx:Form xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="com.atricore.idbus.console.components.*"
         defaultButton="{btnOk}" styleName="unpadded" width="100%" height="100%" verticalGap="8">

    <fx:Declarations>
        <utils:NameValidator id="nameValidator" source="{serviceProvName}" required="true" property="text" trigger="{btnOk}"
                             triggerEvent="click"/>
        <mx:NumberValidator id="portValidator" source="{spLocationPort}" required="false" property="text"
                        minValue="1" maxValue="65535" trigger="{btnOk}" triggerEvent="click"
                        invalidCharError="{resourceManager.getString(AtricoreConsole.BUNDLE, 'location.portValidationError')}"/>

        <utils:URLPartValidator id="domainValidator" source="{spLocationDomain}" required="true" property="text"
                        trigger="{btnOk}" triggerEvent="click"/>
        <utils:URLPartValidator id="contextValidator" source="{spLocationContext}" required="true" property="text"
                        trigger="{btnOk}" triggerEvent="click"/>
        <utils:URLMultipartValidator id="pathValidator" source="{spLocationPath}" required="false" property="text"
                        trigger="{btnOk}" triggerEvent="click"/>

        <mx:StringValidator id="certificateAliasValidator" source="{certificateAlias}" required="true" property="text"/>
        <mx:StringValidator id="keyAliasValidator" source="{keyAlias}" required="true" property="text"/>
        <mx:StringValidator id="keystorePasswordValidator" source="{keystorePassword}" required="true" property="text"/>
        <mx:StringValidator id="keyPasswordValidator" source="{keyPassword}" required="true" property="text"/>

        <s:RadioButtonGroup id="certificateManagementType"/>
    </fx:Declarations>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.name')}:" required="true">
        <s:TextInput id="serviceProvName" width="300"/>
    </mx:FormItem>

    <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.description')}:">
        <s:TextInput id="serviceProvDescription" width="300"/>
    </mx:FormItem>

    <mx:TabNavigator id="spTabNavigator" borderStyle="solid" width="100%" height="310" creationPolicy="all">

        <!-- CORE TAB -->
        <s:NavigatorContent label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'identityProv.tab.core')}">
            <s:VGroup>

                <mx:FormItem label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.location')}:" required="true"
                        direction="horizontal" labelWidth="75">
                    <s:DropDownList id="spLocationProtocol" width="70" selectedIndex="0">
                        <s:dataProvider>
                            <mx:ArrayCollection>
                                <fx:Object label="http" data="http"/>
                                <fx:Object label="https" data="https"/>
                            </mx:ArrayCollection>
                        </s:dataProvider>
                    </s:DropDownList>
                    <s:Label text="://" width="9" paddingLeft="-5" paddingTop="5"/>
                    <s:TextInput id="spLocationDomain" width="130"/>
                    <s:Label text=":" width="1" paddingLeft="-5" paddingTop="5"/>
                    <s:TextInput id="spLocationPort" width="40"/>
                    <s:Label text="/" width="2" paddingLeft="-5" paddingTop="5"/>
                    <s:TextInput id="spLocationContext" width="100"/>
                    <s:Label text="/" width="2" paddingLeft="-5" paddingTop="5"/>
                    <s:TextInput id="spLocationPath" width="130"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="155" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.account.linkage.policy')}:">
                    <s:DropDownList id="accountLinkagePolicyCombo" width="200" labelField="name" selectedIndex="0" requireSelection="true"/>
                </mx:FormItem>

                <mx:FormItem labelWidth="155" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.identity.mapping.policy')}:">
                    <s:DropDownList id="identityMappingPolicyCombo" width="200" labelField="name" selectedIndex="0" requireSelection="true"/>
                </mx:FormItem>

            </s:VGroup>
        </s:NavigatorContent>

        <!-- CONTRACT TAB -->
        <s:NavigatorContent label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.tab.contract')}">
            <s:VGroup paddingLeft="5" paddingRight="5" width="100%">

                <utils:TitledBorderBox title="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.saml')}"
                                       height="100%" width="100%" paddingLeft="5" paddingRight="5" paddingTop="15" paddingBottom="5">


                    <mx:FormItem labelWidth="180" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.enabled.saml.profiles')}:" direction="horizontal">
                        <s:CheckBox id="samlProfileSSOCheck" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'saml.profile.sso')}" selected="true"/>
                        <s:CheckBox id="samlProfileSLOCheck" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'saml.profile.slo')}" selected="true"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="180" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.enabled.saml.bindings')}:" direction="horizontal">
                        <s:CheckBox id="samlBindingHttpPostCheck" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'saml.binding.http.post')}" selected="true"/>
                        <s:CheckBox id="samlBindingHttpRedirectCheck" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'saml.binding.http.redirect')}" selected="false"/>
                        <s:CheckBox id="samlBindingArtifactCheck" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'saml.binding.artifact')}" selected="false"/>
                        <s:CheckBox id="samlBindingSoapCheck"
                                 label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'saml.binding.soap')}" selected="true"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="180" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.sign.auth.requests')}:">
                        <s:CheckBox id="signAuthnRequestsCheck" selected="false"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="180" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.wantAssertionSigned')}:">
                        <s:CheckBox id="wantAssertionSignedCheck" selected="false"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="180" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.wantSignedRequests')}:">
                        <s:CheckBox id="wantSignedRequestsCheck" selected="false"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="180" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'serviceProv.signRequests')}:">
                        <s:CheckBox id="signRequestsCheck" selected="false"/>
                    </mx:FormItem>

                </utils:TitledBorderBox>
                
            </s:VGroup>
        </s:NavigatorContent>

        <!-- CERTIFICATE TAB -->
        <s:NavigatorContent label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'identityProv.tab.certificate')}">
            <s:VGroup width="100%" height="100%" paddingLeft="10" paddingRight="10" paddingBottom="10">

                <utils:TitledBorderBox title="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.manageCertificate')}"
                               width="100%" height="100%" cornerRadius="5" paddingLeft="10" paddingRight="5" paddingTop="20" paddingBottom="5">
                    <s:RadioButton groupName="certificateManagementType" id="useDefaultKeystore" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.type.useDefaultKeystore')}" selected="true"/>
                    <!--s:RadioButton groupName="certificateManagementType" id="autoGenerate" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.type.autoGenerate')}"/-->
                    <s:RadioButton groupName="certificateManagementType" id="uploadKeystore" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.type.uploadKeystore')}"/>
                </utils:TitledBorderBox>

                <!-- UPLOAD CERTIFICATE -->
                <utils:TitledBorderBox title="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.uploadKeyPair')}"
                               width="100%" height="100%" cornerRadius="5" paddingLeft="10" paddingRight="5" paddingTop="20" paddingBottom="5">
                    <s:HGroup width="100%" height="100%">
                        <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.certificateKeyPair')}:">
                            <s:DropDownList id="certificateKeyPair" width="145" prompt="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.browseKeyPair')}"
                                            requireSelection="true" enabled="false"/>
                        </mx:FormItem>
                        <!--s:Button id="btnUpload" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.upload')}" enabled="false"/-->
                        <s:Label id="lblUploadMsg" text="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.upload.success')}" visible="false" paddingTop="5"/>
                    </s:HGroup>

                    <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.keystoreFormat')}:">
                        <s:DropDownList id="keystoreFormat" width="145" enabled="false" selectedIndex="0">
                            <mx:ArrayCollection>
                                 <fx:Object label="Java Keystore" data="JKS"/>
                             </mx:ArrayCollection>
                        </s:DropDownList>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.keystorePassword')}:" required="true">
                        <s:TextInput id="keystorePassword" width="145" enabled="false"/>
                    </mx:FormItem>                    

                    <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.certificateAlias')}:" required="true">
                        <s:TextInput id="certificateAlias" width="145" enabled="false"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.keyAlias')}:" required="true">
                        <s:TextInput id="keyAlias" width="145" enabled="false"/>
                    </mx:FormItem>

                    <mx:FormItem labelWidth="120" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'manageCertificate.form.keyPassword')}:" required="true">
                        <s:TextInput id="keyPassword" width="145" enabled="false"/>
                    </mx:FormItem>
                </utils:TitledBorderBox>

            </s:VGroup>
        </s:NavigatorContent>
        
    </mx:TabNavigator>

    <mx:ControlBar horizontalAlign="center" width="100%" height="100%">
        <s:Button id="btnOk" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.ok')}"/>
        <s:Button id="btnCancel" label="{resourceManager.getString(AtricoreConsole.BUNDLE, 'action.cancel')}"/>
    </mx:ControlBar>

</mx:Form>