<?xml version="1.0"?>
<AppSectionView
        xmlns="com.atricore.idbus.console.base.extensions.appsection.*"
        xmlns:mx="library://ns.adobe.com/flex/mx"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:menu="com.atricore.idbus.console.settings.main.menu.*"
        xmlns:liveupdate="com.atricore.idbus.console.liveupdate.main.*"
        width="100%" height="100%"
        skinClass="com.atricore.idbus.console.skin.panel.NoTitleBarPanelSkin"
        name="{resourceManager.getString(AtricoreConsole.BUNDLE, 'main.settingsTab.name')}">

    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;

        public var icon:Class = EmbeddedIcons.setupMiniIcon;
        ]]>
    </fx:Script>

    <s:HGroup width="100%" height="100%" x="0" y="0" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
        <menu:MenuView id="menu" width="20%" height="100%"/>
        <s:Group id="panel" width="80%" height="100%">
            <s:Panel width="100%" height="100%" skinClass="com.atricore.idbus.console.skin.panel.NoTitleBarPanelSkin"/>
        </s:Group>
    </s:HGroup>

</AppSectionView>
