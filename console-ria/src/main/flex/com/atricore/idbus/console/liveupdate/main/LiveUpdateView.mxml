<s:Panel xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         width="100%" height="100%"
         skinClass="com.atricore.idbus.console.skin.panel.NoTitleBarPanelSkin"
        >

    <fx:Metadata>
        [ResourceBundle("console")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import com.atricore.idbus.console.main.EmbeddedIcons;
        import mx.collections.ArrayCollection;
        public var icon:Class = EmbeddedIcons.liveUpdateMiniIcon;
        ]]>
    </fx:Script>

    <s:VGroup id="updatesVBox" width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
        <mx:DataGrid id="updatesList" width="100%" rowCount="10" resizeEffect="Resize" verticalAlign="middle">
            <mx:columns>
                <mx:DataGridColumn dataField="name" headerText="Name"/>
                <mx:DataGridColumn dataField="group" headerText="Group"/>
                <mx:DataGridColumn dataField="version" headerText="Version"/>
                <mx:DataGridColumn dataField="description" headerText="Description"/>
                <mx:DataGridColumn dataField="nature" headerText="Nature"/>
                <mx:DataGridColumn dataField="date" headerText="Date"/>
            </mx:columns>
        </mx:DataGrid>
    </s:VGroup>

</s:Panel>
