<schema
        targetNamespace="urn:com:atricore:liveservices:liveupdate:1.0:profile"
        xmlns="http://www.w3.org/2001/XMLSchema"
        xmlns:md="urn:com:atricore:liveservices:liveupdate:1.0:md"
        xmlns:prof="urn:com:atricore:liveservices:liveupdate:1.0:profile"
        elementFormDefault="unqualified"
        attributeFormDefault="unqualified"
        blockDefault="substitution"
        version="2.0">


    <import namespace="urn:com:atricore:liveservices:liveupdate:1.0:md"
            schemaLocation="atricore-liveupdate-md-1.0.xsd"/>

    <element name="profile" type="prof:ProfileType"/>
    <complexType name="ProfileType">
        <sequence>
            <element ref="md:installableUnit" minOccurs="0" maxOccurs="unbounded"/>
        </sequence>
        <attribute name="ID" type="ID"/>
        <attribute name="name" type="string"/>
    </complexType>

</schema>