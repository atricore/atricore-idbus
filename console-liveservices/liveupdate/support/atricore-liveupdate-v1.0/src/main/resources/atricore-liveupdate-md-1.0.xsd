<schema
        targetNamespace="urn:com:atricore:liveservices:liveupdate:1.0:md"
        xmlns="http://www.w3.org/2001/XMLSchema"
        xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
        xmlns:xenc="http://www.w3.org/2001/04/xmlenc#"
        xmlns:lu="urn:com:atricore:liveservices:liveupdate:1.0:md"
        elementFormDefault="unqualified"
        attributeFormDefault="unqualified"
        blockDefault="substitution"
        version="2.0">

    <import namespace="http://www.w3.org/2000/09/xmldsig#"
            schemaLocation="http://www.josso.org/schema/www.w3.org/TR/2002/REC-xmldsig-core-20020212/xmldsig-core-schema.xsd"/>
    <import namespace="http://www.w3.org/2001/04/xmlenc#"
            schemaLocation="http://www.josso.org/schema/www.w3.org/TR/2002/REC-xmlenc-core-20021210/xenc-schema.xsd"/>

    <annotation>
        <documentation>
            Document identifier: atricore-liveupdate-md-1.0
            Revision history:
            V1.0 (October, 2010):
            Initial Standard Schema.
        </documentation>
    </annotation>

    <element name="artifactDescriptor" type="lu:ArtifactDescriptorType"/>
    <complexType name="ArtifactDescriptorType">
        <sequence>
            <element ref="ds:Signature" minOccurs="0"/>
            <element ref="lu:artifact"/>
        </sequence>
        <attribute name="checksum" type="string" use="optional"/>
        <attribute name="lastUpdate" type="dateTime" use="optional"/>
    </complexType>

    <element name="updatesIndex" type="lu:UpdatesIndexType"/>
    <complexType name="UpdatesIndexType">
        <sequence>
            <element ref="ds:Signature" minOccurs="0"/>
            <element ref="lu:updateDescriptor" minOccurs="0" maxOccurs="unbounded"/>
        </sequence>
        <attribute name="ID" type="ID" use="required"/>
    </complexType>

    <element name="updateDescriptor" type="lu:UpdateDescriptorType"/>
    <complexType name="UpdateDescriptorType">
        <sequence>
            <element ref="lu:installableUnit" minOccurs="0" />
        </sequence>
        <attribute name="ID" type="ID" use="required"/>
        <attribute name="description" type="string" use="required"/>
        <attribute name="IssueInstant" type="dateTime" use="required"/>
    </complexType>

    <element name="installableUnit" type="lu:InstallableUnitType"/>
    <complexType name="InstallableUnitType">
        <sequence>
            <element ref="lu:artifact" minOccurs="0" maxOccurs="unbounded"/>
            <element ref="lu:requirement" minOccurs="0" maxOccurs="unbounded"/>
            <element ref="lu:updateDescriptor" minOccurs="0"/>
        </sequence>
        <attribute name="ID" type="ID" use="required"/>
        <attribute name="group" type="string" use="required" />
        <attribute name="name" type="string" use="required" />
        <attribute name="version" type="string" use="required" />
        <attribute name="updateNature" type="lu:UpdateNatureType" />
        <attribute name="description" type="string"/>

    </complexType>

    <element name="versionRange" type="lu:VersionRangeType"/>
    <complexType name="VersionRangeType">
        <attribute name="Expression" type="string" use="required"/>
    </complexType>

    <complexType name="RequirementType">
        <attribute name="description" type="string"/>
    </complexType>

    <element name="requirement" type="lu:RequiredFeatureType"/>
    <complexType name="RequiredFeatureType">
        <complexContent>
            <extension base="lu:RequirementType">
                <sequence>
                    <element ref="lu:versionRange" />
                </sequence>
                <attribute name="group" type="string" use="required"/>
                <attribute name="name" type="string" use="required"/>
            </extension>
        </complexContent>
    </complexType>

    <element name="artifact" type="lu:ArtifactKeyType"/>
    <complexType name="ArtifactKeyType">
        <attribute name="ID" type="ID" use="required"/>
        <attribute name="group" type="string" use="required"/>
        <attribute name="name" type="string" use="required"/>
        <attribute name="version" type="string" use="required"/>
        <attribute name="classifier" type="string" use="optional"/>
        <attribute name="type" type="string" use="optional"/>
    </complexType>

    <simpleType name="UpdateNatureType">
        <restriction base="string">
            <enumeration value="SECURITY"/>
            <enumeration value="BUGFIX"/>
            <enumeration value="EMERGENCY_BUGFIX"/>
            <enumeration value="IMPROVEMENT"/>
            <enumeration value="NEW_FEATURE"/>
            <enumeration value="UPGRADE"/>
            <enumeration value="SERVICE_PACK"/>
            <enumeration value="DISTRO"/>
        </restriction>
    </simpleType>

    <!-- RFU -->
    <element name="Request" type="lu:RequestType"/>
    <complexType name="RequestType">
        <attribute name="ID" type="ID" use="required"/>
        <attribute name="IssueInstant" type="dateTime" use="required"/>
    </complexType>

    <element name="Response" type="lu:ResponseType"/>
    <complexType name="ResponseType">
        <attribute name="ID" type="ID" use="required"/>
        <attribute name="IssueInstant" type="dateTime" use="required"/>
    </complexType>

</schema>