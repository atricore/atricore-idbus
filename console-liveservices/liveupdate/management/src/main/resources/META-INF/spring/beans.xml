<s:beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:osgi="http://www.springframework.org/schema/osgi"
         xmlns:s="http://www.springframework.org/schema/beans"
         xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/osgi  http://www.springframework.org/schema/osgi/spring-osgi.xsd"
        >

    <osgi:reference id="updateManagerService" cardinality="1..1" timeout="60"
                    interface="com.atricore.idbus.console.liveservices.liveupdate.main.LiveUpdateManager"/>

    <!-- LiveUpdate Service MBean -->

    <bean name="mBeanServer" class="org.springframework.jmx.support.MBeanServerFactoryBean" scope="singleton">
        <property name="locateExistingServerIfPossible" value="true"/>
    </bean>

    <bean name="liveupdate-mbean" class="com.atricore.idbus.console.liveservices.liveupdate.management.internal.LiveUpdateMBeanImpl">
        <property name="updateManager" ref="updateManagerService"/>
    </bean>
    
    <bean name="liveupdate-mbean-exporter" class="org.springframework.jmx.export.MBeanExporter">
        <property name="server" ref="mBeanServer"/>
        <property name="beans">
            <map>
                <entry key="com.atricore.idbus.console:type=LiveUpdate,name=liveupdate" value-ref="liveupdate-mbean"/>
            </map>
        </property>
    </bean>

</s:beans>