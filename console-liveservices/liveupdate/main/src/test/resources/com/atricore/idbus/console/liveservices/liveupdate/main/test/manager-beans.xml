    <bean name="liveUpdateSigner" class="com.atricore.liveservices.liveupdate._1_0.util.LiveUpdateSigner" init-method="init"/>
    
    <!-- Metadata Repository Manager -->
    <bean name="mdRepositoryManager"
          class="com.atricore.idbus.console.liveservices.liveupdate.main.repository.impl.MetadataRepositoryManagerImpl" scope="prototype">
        <property name="transports">
            <list>
                <ref bean="httpRepositoryTransport"/>
                <ref bean="fileRepositoryTransport1"/>
                <ref bean="fileRepositoryTransport2"/>
            </list>
        </property>
        <property name="liveUpdateSigner" ref="liveUpdateSigner"/>
    </bean>

    <!-- Artifact Repository Manager -->
    <bean name="artRepositoryManager"
          class="com.atricore.idbus.console.liveservices.liveupdate.main.repository.impl.ArtifactRepositoryManagerImpl">
        <property name="transports">
            <list>
                <ref bean="httpRepositoryTransport"/>
                <ref bean="fileRepositoryTransport1"/>
                <ref bean="fileRepositoryTransport2"/>
            </list>
        </property>
    </bean>

</beans>