    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${pom.basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            <resource>
                <directory>${pom.basedir}/src/main/filtered-resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${artifactId}</Bundle-SymbolicName>
                        <Export-Package>com.atricore.idbus.console.activation.main.*; version="${pom.version}",</Export-Package>
                        <Import-Package>
                            !${pom.artifactId}*,
                            org.apache.commons.logging; version="[1.0,1.1.99)"; provider=paxlogging,
                            org.apache.log4j; version="[1.2,1.3)"; provider=paxlogging,
                            org.osgi.service.command,
                            org.apache.felix.gogo.commands,
                            org.apache.felix.karaf.shell.console,
                            org.codehaus.plexus.*; resolution:=optional,
                            org.apache.geronimo.gshell.support.plexus; resolution:=optional,
                            org.apache.commons.jexl.*; resolution:=optional,
                            org.apache.mina.*; resolution:=optional,
                            com.thoughtworks.xstream.*; resolution:=optional,
                            com.fujitsu.xml.*; resolution:=optional,
                            name.fraser.neil.plaintext; resolution:=optional,
                            junit.framework.*; resolution:=optional,
                            org.josso.auth.util; resolution:=optional,
                            *
                        </Import-Package>
                        <Embed-Dependency>*; scope=compile; type=!pom; inline=false</Embed-Dependency>
                        <Private-Package>!*</Private-Package>
                        <Spring-Context>*;timeout:=60;wait-for-dependencies:=true;create-asynchronously:=false</Spring-Context>
                        <_versionpolicy>${bnd.version.policy}</_versionpolicy>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>

    </build>    


