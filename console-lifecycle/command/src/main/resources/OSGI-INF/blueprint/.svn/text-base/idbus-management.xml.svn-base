<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">


    <command-bundle xmlns="http://felix.apache.org/karaf/xmlns/shell/v1.0.0">
        
        <command name="appliance/build">
            <action class="org.atricore.idbus.capabilities.management.command.BuildApplianceCommand"/>
            <completers>
                <ref component-id="buildApplianceCompleter" />
            </completers>
        </command>

        <command name="appliance/list">
            <action class="org.atricore.idbus.capabilities.management.command.ListAppliancesCommand"/>
        </command>

        <command name="appliance/deploy">
            <action class="org.atricore.idbus.capabilities.management.command.DeployApplianceCommand"/>
            <completers>
                <ref component-id="deployApplianceCompleter" />
            </completers>
        </command>

        <command name="appliance/undeploy">
            <action class="org.atricore.idbus.capabilities.management.command.UndeployApplianceCommand"/>
            <completers>
                <ref component-id="undeployApplianceCompleter" />
            </completers>
        </command>

        <command name="appliance/start">
            <action class="org.atricore.idbus.capabilities.management.command.StartApplianceCommand"/>
            <completers>
                <ref component-id="startApplianceCompleter" />
            </completers>
        </command>

        <command name="appliance/stop">
            <action class="org.atricore.idbus.capabilities.management.command.StopApplianceCommand"/>
            <completers>
                <ref component-id="stopApplianceCompleter" />
            </completers>
        </command>

        <command name="appliance/import-definition">
            <action class="org.atricore.idbus.capabilities.management.command.ImportApplianceDefinitionCommand"/>
        </command>

    </command-bundle>

    <bean id="buildApplianceCompleter"
          class="org.atricore.idbus.capabilities.management.command.completers.BuildableAppliancesCompleter" >
        <property name="idApplianceService" ref="idApplianceManagementService"/>
    </bean>

    <bean id="deployApplianceCompleter"
          class="org.atricore.idbus.capabilities.management.command.completers.DeployableAppliancesCompleter" >
        <property name="idApplianceService" ref="idApplianceManagementService"/>
    </bean>


    <bean id="undeployApplianceCompleter"
          class="org.atricore.idbus.capabilities.management.command.completers.UndeployableAppliancesCompleter" >
        <property name="idApplianceService" ref="idApplianceManagementService"/>
    </bean>


    <bean id="startApplianceCompleter"
          class="org.atricore.idbus.capabilities.management.command.completers.StartableAppliancesCompleter" >
        <property name="idApplianceService" ref="idApplianceManagementService"/>
    </bean>


    <bean id="stopApplianceCompleter"
          class="org.atricore.idbus.capabilities.management.command.completers.StoppableAppliancesCompleter" >
        <property name="idApplianceService" ref="idApplianceManagementService"/>
    </bean>


    <!-- Should be exported by Spring reference ID value must match the one used to export the service! -->
    <reference id="idApplianceManagementService"
               interface="org.atricore.idbus.capabilities.management.main.spi.IdentityApplianceManagementService"
               availability="mandatory"
               activation="eager"
               timeout="60000"/>


</blueprint>
