<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.atricore.idbus.console.lifecycle</groupId>
        <artifactId>console-lifecycle</artifactId>
        <version>1.0.0</version>
    </parent>

    <artifactId>com.atricore.idbus.console.lifecycle.main</artifactId>
    <packaging>bundle</packaging>
    <name>Atricore Console :: Lifecycle</name>

    <dependencies>

        <dependency>
            <groupId>org.atricore.idbus.kernel</groupId>
            <artifactId>org.atricore.idbus.kernel.main</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.kernel.common</groupId>
            <artifactId>org.atricore.idbus.kernel.common.support</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.karaf.features</groupId>
            <artifactId>org.apache.karaf.features.core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.kernel</groupId>
            <artifactId>org.atricore.idbus.kernel.planning</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.connectors</groupId>
            <artifactId>org.atricore.idbus.connectors.jdoidentityvault</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.capabilities.josso</groupId>
            <artifactId>org.atricore.idbus.capabilities.josso.main</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.capabilities.samlr2</groupId>
            <artifactId>org.atricore.idbus.capabilities.samlr2.support</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.capabilities.samlr2</groupId>
            <artifactId>org.atricore.idbus.capabilities.samlr2.main</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.apache-maven-v3_0</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.javax-jdo2-v2_3-ec</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.kernel.common</groupId>
            <artifactId>org.atricore.idbus.kernel.common.xmldsig</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.kernel.common</groupId>
            <artifactId>org.atricore.idbus.kernel.common.samlr2</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.apache-derby-network-v10_5_3_0_1</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.atricore.idbus.console.activation</groupId>
            <artifactId>com.atricore.idbus.console.activation.main</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.atricore.idbus.console.activation</groupId>
            <artifactId>com.atricore.idbus.console.activation.protocol</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.servicemix.bundles</groupId>
            <artifactId>org.apache.servicemix.bundles.commons-vfs</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context-support</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-orm</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.osgi</groupId>
            <artifactId>spring-osgi-core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>com.springsource.org.apache.velocity</artifactId>
            <scope>provided</scope>
        </dependency>        

        <!-- Compile dependencies, embedded -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>com.atricore.idbus.console.lifecycle.support.springmetadata</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.datanucleus-v2_1_2</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Test dependencies -->

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>net.sf.dozer</groupId>
            <artifactId>dozer</artifactId>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>org.apache.xmlbeans</groupId>
            <artifactId>xmlbeans</artifactId>
            <version>2.4.0</version>
            <scope>test</scope>
        </dependency>


    </dependencies>

    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/filtered-resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>


        <plugins>
            
            <plugin>
                <groupId>org.datanucleus</groupId>
                <artifactId>maven-datanucleus-plugin</artifactId>
                <version>2.0.1</version>
                <configuration>
                    <fork>false</fork>

                    <log4jConfiguration>${basedir}/src/main/jdo/log4j-datanucleus.properties</log4jConfiguration>
                    <verbose>true</verbose>
                    <props>${basedir}/datanucleus.properties</props>
                    <outputFile>idbus-server-management.ddl</outputFile>
                </configuration>

                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>enhance</goal>
                        </goals>
                        <configuration>
                            <log4jConfiguration>${basedir}/src/main/jdo/log4j-datanucleus.properties</log4jConfiguration>
                        </configuration>
                    </execution>

                </executions>

                <dependencies>

                    <dependency>
                        <groupId>org.datanucleus</groupId>
                        <artifactId>datanucleus-core</artifactId>
                        <version>${datanucleus.version}</version>
                    </dependency>

                    <dependency>
                        <groupId>org.datanucleus</groupId>
                        <artifactId>datanucleus-rdbms</artifactId>
                        <version>${datanucleus.version}</version>
                    </dependency>
                    
                    <dependency>
                        <groupId>org.datanucleus</groupId>
                        <artifactId>datanucleus-enhancer</artifactId>
                        <version>[2.1, 2.2)</version>
                    </dependency>

                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${felix.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            com.atricore.idbus.console.lifecycle.main.*; version="${pom.version}",
                        </Export-Package>
                        <Embed-Dependency>*;scope=compile</Embed-Dependency>
                        <Private-Package>!*</Private-Package>
                        <Import-Package>
                            org.w3._2000._09.xmldsig_,
                            org.apache.commons.logging; version="[1.0,1.1.99)"; provider=paxlogging,
                            org.apache.log4j; version="[1.2,1.3)"; provider=paxlogging,
                            javax.jdo; version="[2.3.0,2.3.0]",
                            javax.jdo.annotations; version="[2.3.0,2.3.0]",
                            javax.jdo.datastore; version="[2.3.0,2.3.0]",
                            javax.jdo.identity; version="[2.3.0,2.3.0]",
                            javax.jdo.listener; version="[2.3.0,2.3.0]",
                            javax.jdo.metadata; version="[2.3.0,2.3.0]",
                            javax.jdo.spi; version="[2.3.0,2.3.0]",
                            javax.management,
                            javax.transaction;resolution:=optional,
                            javax.transaction.xa;resolution:=optional,
                            javax.naming,
                            javax.naming.spi,
                            javax.xml.xpath,
                            javax.xml.parsers,
                            javax.xml.stream,
                            javax.xml.transform,
                            javax.xml.transform.dom,
                            javax.xml.transform.stream,
                            javax.xml.validation,
                            javax.sql,
                            oasis.names.tc.saml._2_0.metadata,
                            oasis.names.tc.saml._2_0.assertion,
                            oasis.names.tc.saml._2_0.protocol,
                            oasis.names.tc.saml._2_0.wsdl,
                            org.atricore.idbus.bundles.apache.derby,
                            com.atricore.idbus.console.lifecycle.support.springmetadata.model.*,
                            org.apache.derby.jdbc,
                            org.hsqldb,
                            org.aopalliance.aop,
                            org.springframework.aop; version="[${spring.version},${spring.version}]",
                            org.springframework.aop.framework; version="[${spring.version},${spring.version}]",
                            org.springframework.core.io,
                            org.springframework.context; version="[${spring.version},${spring.version}]",
                            org.springframework.beans; version="[${spring.version},${spring.version}]",
                            org.springframework.beans.factory; version="[${spring.version},${spring.version}]",
                            org.springframework.beans.factory.config; version="[${spring.version},${spring.version}]",
                            org.springframework.web.context; version="[${spring.version},${spring.version}]",
                            org.springframework.web.context.support; version="[${spring.version},${spring.version}]",
                            org.springframework.orm.jdo; version="[${spring.version},${spring.version}]",
                            org.springframework.orm.jdo.support; version="[${spring.version},${spring.version}]",
                            org.springframework.osgi.web.context.support; version=["1.2.0,1.2.0"],
                            org.springframework.osgi.context; version=["1.2.0,1.2.0"],
                            org.osgi.framework,
                            org.xml.sax,
                            org.xml.sax.helpers,
                            org.w3c.dom,
                            org.apache.velocity; version=${velocity.version},
                            org.apache.velocity.app; version=${velocity.version},
                            org.apache.velocity.context; version=${velocity.version},
                            oracle.jdbc.driver;resolution:=optional,
                            *
                        </Import-Package>
                        <Require-Bundle>
                            org.atricore.idbus.kernel.common.support,
                            org.atricore.idbus.kernel.common.samlr2,
                            org.atricore.idbus.kernel.common.spml,
                            org.atricore.idbus.kernel.common.sso,
                            org.atricore.idbus.kernel.common.html,
                            org.atricore.idbus.kernel.main,
                            org.atricore.idbus.kernel.planning,
                            org.datanucleus,
                            org.atricore.idbus.bundles.apache-derby-network-v10_5_3_0_1
                        </Require-Bundle>
                        <Spring-Context>*;timeout:=60;wait-for-dependencies:=true;create-asynchronously:=false</Spring-Context>
                    </instructions>
                </configuration>
            </plugin>

        </plugins>
    </build>


</project>
