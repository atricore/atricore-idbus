<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
      http://www.springframework.org/schema/osgi  http://www.springframework.org/schema/osgi/spring-osgi.xsd"
      >

    <description>
        This is a set of beans used to test persistence mechanism, instead of wiring beans setup in test cases,
        we can define several data sets here.
    </description>

    <!--<bean name="prj1" class="org.atricore.idbus.applications.server.managementtadata.idbus.IdentityProject">-->
        <!--<property name="name" value="prj1"/>-->
        <!--<property name="description" value="Identity Project 1"/>-->
        <!--<property name="state" value="INIT"/>-->
    <!--</bean>-->

    <bean name="idbusLocation" class="org.atricore.idbus.capabilities.management.main.domain.metadata.Location">
        <property name="protocol" value="http" />
        <property name="host" value="localhost" />
        <property name="port" value="80" />
        <property name="context" value="idbus1" />
    </bean>
    
    <bean name="idbus1" class="org.atricore.idbus.capabilities.management.main.domain.metadata.IdentityApplianceDefinition">
        <property name="name" value="idbus1"/>
        <!--<property name="displayName" value="Identity Bus Definition 1"/>-->
        <property name="location" ref="idbusLocation" />
        <property name="supportedRoles">
            <list>
                <value>SSOIdentityProvider</value>
                <value>SSOServiceProvider</value>
            </list>
        </property>
        <property name="activeFeatures">
            <list>
                <value>SAMLR2</value>
                <value>JOSSO</value>
                <value>STS</value>
            </list>
        </property>
        <property name="providers">
            <list>
                <ref bean="idp1"/>
                <ref bean="sp1"/>
            </list>
        </property>
        <property name="identityVaults">
            <list>
                <ref bean="idpIdentityVault"/>
            </list>
        </property>
    </bean>

    <bean name="idp1" class="org.atricore.idbus.capabilities.management.main.domain.metadata.IdentityProvider">
        <property name="name" value="idp1"/>
        <!--<property name="displayName" value="Identity Provider 1"/>-->
        <property name="description" value="This is the Identity Provider (IdP) One definition"/>
        
        <property name="defaultChannel" ref="idp1-default-sp-channel"/>
        
    </bean>

    <bean name="idp1-default-sp-channel" class="org.atricore.idbus.capabilities.management.main.domain.metadata.ServiceProviderChannel">
        <property name="name" value="idp1-default-sp-channel"/>
        <!--<property name="displayName" value="IdP 1 - Default SP Channel"/>-->
        <property name="location" ref="idpLocation" />
        <!--<property name="identityVault" ref="idpIdentityVault" />-->
        <property name="target" ref="sp1" />
    </bean>

    <bean name="idpLocation" class="org.atricore.idbus.capabilities.management.main.domain.metadata.Location">
        <property name="protocol" value="http" />
        <property name="host" value="localhost" />
        <property name="port" value="80" />
        <property name="context" value="idp1" />
        <property name="uri" value="sps" />
    </bean>

    <bean name="idpIdentityVault" class="org.atricore.idbus.capabilities.management.main.domain.metadata.DbIdentityVault">
        <property name="name" value="users"/>
        <property name="port" value="1527" />
        <property name="admin" value="admin" />
        <property name="password" value="sa" />
    </bean>

    <bean name="sp1" class="org.atricore.idbus.capabilities.management.main.domain.metadata.ServiceProvider">
        <property name="name" value="sp1"/>
        <!--<property name="displayName" value="Identity Provider 1"/>-->
        <property name="description" value="This is the Service Provider (SP) One definition"/>

    </bean>    

</beans>