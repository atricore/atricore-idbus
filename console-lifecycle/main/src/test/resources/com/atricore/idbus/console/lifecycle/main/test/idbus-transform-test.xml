<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- This is where the 'tree' of IDBus elements is defined. In a real world scenario, this should be created by Flex console users dynamically -->
    <import resource="appliance-model-beans.xml"/>

    <!-- Use DAOs definitions from main sources -->
    <bean name="idaDao" class="com.atricore.idbus.console.lifecycle.main.domain.dao.impl.IdentityApplianceDAOImpl">
        <property name="jdoTemplate" ref=""
    </bean>

    <!-- Define Transformers -->

    <bean name="projectSetupTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ProjectSetupTransformer"/>

    <bean name="idauBaseComponentsTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdauBaseComponentsTransformer"/>

    <bean name="idpTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdPTransformer"/>

    <bean name="spChannelTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SPChannelTransformer"/>

    <bean name="claimsChannelTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ClaimsChannelTransformer"/>

    <bean name="stsTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.STSTransformer"/>

    <bean name="spTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SPTransformer"/>

    <bean name="idpChannelTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdPChannelTransformer"/>

    <bean name="bpTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.BPTransformer"/>

    <bean name="embeddedStoreTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.EmbeddedStoreTransformer"/>

    <bean name="externalStoreTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExternalStoreTransformer"/>

    <bean name="samlr2MetadataTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SamlR2MetadataTransformer"/>

    <bean name="idauSerializerTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdauSerializerTransformer"/>

    <bean name="projectSerializerTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ProjectSerializerTransformer">

        <!-- property name="outputPath" value="/tmp/atricore-idbus"/-->

        <property name="serializers">
            <list>
                <bean name="springSerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.SpringSerializer"/>
                <bean name="saml2Serializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.Saml2Serializer"/>
                <bean name="velocitySerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.VelocitySerializer"/>
                <bean name="binarySerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.BinarySerializer"/>
            </list>
        </property>

    </bean>

    <bean name="applianceBuilderTransfomer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ApplianceBuilderTransformer"/>

    <bean name="applianceBuilder"
          class="com.atricore.idbus.console.lifecycle.main.transform.TransformerApplianceBuilderImpl">
        <property name="engine" ref="idauTransformingEngine"/>
    </bean>

    <bean name="idauTransformingEngine"
          class="com.atricore.idbus.console.lifecycle.main.transform.TransformationEngine">

        <property name="transformers">
            <list>
                <ref bean="idauBaseComponentsTransformer"/>
                <ref bean="idauSerializerTransformer"/>
            </list>
        </property>

        <property name="walker">
            <bean name="idbusWalker"
                  class="com.atricore.idbus.console.lifecycle.main.transform.ReflexiveIdentityApplianceDefinitionWalker"/>
        </property>

        <property name="cycles">
            <list>
                <bean name="create-identity-project"
                      class="com.atricore.idbus.console.lifecycle.main.transform.Cycle">

                    <property name="name" value="build"/>

                    <property name="phases">
                        <list>

                            <bean name="validate"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="validate"/>
                            </bean>


                            <bean name="generate"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="generarte"/>

                                <property name="transformers">
                                    <list>
                                        <ref bean="projectSetupTransformer"/>
                                        <ref bean="idauBaseComponentsTransformer"/>
                                        <ref bean="idpTransformer"/>
                                        <ref bean="spChannelTransformer"/>
                                        <ref bean="claimsChannelTransformer"/>
                                        <ref bean="stsTransformer"/>
                                        <ref bean="spTransformer"/>
                                        <ref bean="idpChannelTransformer"/>
                                        <ref bean="bpTransformer"/>
                                    </list>
                                </property>

                            </bean>

                            <bean name="package"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="package"/>

                                <property name="transformers">
                                    <list>
                                        <ref bean="projectSerializerTransformer"/>
                                        <ref bean="applianceBuilderTransfomer"/>
                                    </list>
                                </property>

                            </bean>

                            <bean name="install"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="install"/>
                            </bean>

                        </list>
                    </property>
                </bean>


            </list>
        </property>
    </bean>
</beans>