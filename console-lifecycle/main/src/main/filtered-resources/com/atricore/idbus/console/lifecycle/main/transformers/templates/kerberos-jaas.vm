<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaas="http://karaf.apache.org/xmlns/jaas/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <ext:property-placeholder placeholder-prefix="\$[" placeholder-suffix="]"/>

    <jaas:config name="$realmName">
        <jaas:module className="com.sun.security.auth.module.Krb5LoginModule" flags="required">
            storeKey = true
            debug = true
            useKeyTab = true
            keyTab = $keyTabsRepository/$keyTabName
        </jaas:module>
    </jaas:config>

    <bean id="kerberosFactory" class="org.atricore.idbus.capabilities.spnego.jaas.KerberosServiceInit"
          init-method="init"
          activation="eager">
        <!-- Already available blueprint variable -->
        <property name="bundleContext" ref="blueprintBundleContext"/>

        <property name="principal" value="$servicePrincipalName"/>
        <property name="realm" value="$realmName"/>
        <property name="keyDistributionCenter" value="$keyDistributionCenter"/>
        <property name="kerberosRealm" value="$kerberosRealm"/>

        <!-- KeyTab setup -->
        <property name="keyTabResource" value="$keyTabName"/>
        <property name="keyTabRepository" value="$keyTabsRepository"/>

        <!-- Kerberos config file-->
        <property name="krb5Config" value="$krb5Config"/>


        <property name="configureKerberos" value="$configureKerberos"/>
        <property name="authenticatOnInit" value="true"/>

    </bean>
</blueprint>
