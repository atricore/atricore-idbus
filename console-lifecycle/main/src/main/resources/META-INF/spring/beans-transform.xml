<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Define Transformers -->

    <bean name="projectSetupTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ProjectSetupTransformer"/>

    <bean name="idauBaseComponentsTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdauBaseComponentsTransformer"/>

    <bean name="idpTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdPLocalTransformer"/>

    <bean name="idpFederatedConnectionATransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdpFederatedConnectionTransformer">
        <property name="roleA" value="true"/>
    </bean>

    <bean name="idpFederatedConnectionBTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdpFederatedConnectionTransformer">
        <property name="roleA" value="false"/>
    </bean>

    <bean name="claimsChannelTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ClaimsChannelTransformer"/>

    <bean name="stsTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.STSTransformer"/>

    <bean name="spTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SPTransformer"/>

    <bean name="spFederatedConnectionATransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SPFederatedConnectionTransformer">
        <property name="roleA" value="true"/>
    </bean>

    <bean name="spFederatedConnectionBTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SPFederatedConnectionTransformer">
        <property name="roleA" value="false"/>
    </bean>

    <bean name="spJOSSOActivationTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SPJOSSOActivationTransformer"/>

    <bean name="JOSSOActivationTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.JOSSOActivationTransformer"/>

    <bean name="JOSSOExecEnvTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.JOSSOExecEnvransformer">
        <property name="execEnvProperties">
            <map>
                <!-- Tomcat Family -->
                <entry key="tc50">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="tc50"/>
                        <property name="javaAgentClass" value="org.josso.tc50.agent.CatalinaSSOAgent"/>
                    </bean>
                </entry>

                <entry key="tc55">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="tc55"/>
                        <property name="javaAgentClass" value="org.josso.tc55.agent.CatalinaSSOAgent"/>
                    </bean>
                </entry>

                <entry key="tc60">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="tc60"/>
                        <property name="javaAgentClass" value="org.josso.tc60.agent.CatalinaSSOAgent"/>
                    </bean>
                </entry>

                <!-- JBoss Family -->
                <entry key="jb32">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="jb32"/>
                        <property name="javaAgentClass" value="org.josso.jb32.agent.JBossCatalinaSSOAgent"/>
                    </bean>
                </entry>

                <entry key="jb40">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="jb40"/>
                        <property name="javaAgentClass" value="org.josso.jb40.agent.JBossCatalinaSSOAgent"/>
                    </bean>
                </entry>

                <entry key="jb42">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="jb42"/>
                        <property name="javaAgentClass" value="org.josso.jb42.agent.JBossCatalinaSSOAgent"/>
                    </bean>
                </entry>

                <!-- TODO : Agent class is wrong !
                <entry key="jb5">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="jb5"/>
                        <property name="javaAgentClass" value="org.josso.jb5.agent.JBossCatalinaSSOAgent"/>
                    </bean>
                </entry>
                -->

                <!-- Weblogic Family -->
                <entry key="wl81">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="wl81"/>
                        <property name="javaAgentClass" value="org.josso.wls81.agent.WLSSSOAgent"/>
                    </bean>
                </entry>

                <entry key="wl92">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="wl92"/>
                        <property name="javaAgentClass" value="org.josso.wls92.agent.WLSSSOAgent"/>
                    </bean>
                </entry>

                <entry key="wl10">
                    <bean class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ExecutionEnvironmentProperties">
                        <property name="platformId" value="wl10"/>
                        <property name="javaAgentClass" value="org.josso.wls10.agent.WLSSSOAgent"/>
                    </bean>
                </entry>

            </map>
        </property>
    </bean>

    <bean name="identityLookupTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdentityLookupTransformer"/>

    <bean name="samlr2IdPTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SamlR2IdPTransformer">
        <property name="sampleKeystore">
            <bean class="com.atricore.idbus.console.lifecycle.main.domain.metadata.Keystore">
                <property name="type" value="JKS"/>
                <property name="password" value="ATRICORE"/>
                <property name="privateKeyName" value="josso-sp1"/>
                <property name="privateKeyPassword" value="ATRICORE"/>
                <property name="certificateAlias" value="josso-sp1"/>
                <property name="store">
                    <bean class="com.atricore.idbus.console.lifecycle.main.domain.metadata.Resource">
                        <property name="name" value="idp1-keystore"/>
                        <property name="value" value="/com/atricore/idbus/console/lifecycle/main/sample-keystore.jks"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean name="samlr2SPTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.SamlR2SPTransformer">
        <property name="sampleKeystore">
            <bean class="com.atricore.idbus.console.lifecycle.main.domain.metadata.Keystore">
                <property name="type" value="JKS"/>
                <property name="password" value="ATRICORE"/>
                <property name="privateKeyName" value="josso-sp1"/>
                <property name="privateKeyPassword" value="ATRICORE"/>
                <property name="certificateAlias" value="josso-sp1"/>
                <property name="store">
                    <bean class="com.atricore.idbus.console.lifecycle.main.domain.metadata.Resource">
                        <property name="name" value="idp1-keystore"/>
                        <property name="value" value="/com/atricore/idbus/console/lifecycle/main/sample-keystore.jks"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean name="idauSerializerTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.IdauSerializerTransformer"/>

    <bean name="projectSerializerTransformer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ProjectSerializerTransformer">

        <!--property name="outputPath" value="${buildDir}/transform/atricore-idbus"/-->

        <property name="serializers">
            <list>
                <bean name="springSerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.SpringSerializer"/>
                <bean name="saml2Serializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.Saml2Serializer"/>
                <bean name="velocitySerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.VelocitySerializer"/>
                <bean name="binarySerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.BinarySerializer"/>
                <bean name="copySerializer"
                      class="com.atricore.idbus.console.lifecycle.main.transform.serializers.CopySerializer"/>
            </list>
        </property>

    </bean>

    <bean name="applianceBuilderTransfomer"
          class="com.atricore.idbus.console.lifecycle.main.transform.transformers.ApplianceBuilderTransformer"/>

    <bean name="applianceBuilder"
          class="com.atricore.idbus.console.lifecycle.main.transform.TransformerApplianceBuilderImpl">
        <property name="engine" ref="idauTransformingEngine"/>
    </bean>

    <bean name="idauTransformingEngine"
          class="com.atricore.idbus.console.lifecycle.main.transform.TransformationEngine">

        <property name="transformers">
            <list>
                <ref bean="idauBaseComponentsTransformer"/>
                <ref bean="idauSerializerTransformer"/>
            </list>
        </property>

        <property name="walker">
            <bean name="idbusWalker"
                  class="com.atricore.idbus.console.lifecycle.main.transform.ReflexiveIdentityApplianceDefinitionWalker"/>
        </property>

        <property name="cycles">
            <list>
                <bean name="create-identity-project"
                      class="com.atricore.idbus.console.lifecycle.main.transform.Cycle">

                    <property name="name" value="build"/>

                    <property name="phases">
                        <list>

                            <bean name="validate"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="validate"/>
                            </bean>


                            <bean name="generate"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="generate"/>

                                <property name="transformers">
                                    <list>

                                        <!-- Project Transformers -->
                                        <ref bean="projectSetupTransformer"/>
                                        <ref bean="idauBaseComponentsTransformer"/>

                                        <!-- IDP Transformers -->
                                        <ref bean="idpTransformer"/>
                                        <ref bean="samlr2IdPTransformer"/>

                                        <ref bean="idpFederatedConnectionATransformer"/>
                                        <ref bean="idpFederatedConnectionBTransformer"/>

                                        <ref bean="claimsChannelTransformer"/>
                                        <ref bean="stsTransformer"/>

                                        <!-- SP Transformers -->
                                        <ref bean="spTransformer"/>
                                        <ref bean="spFederatedConnectionATransformer"/>
                                        <ref bean="spFederatedConnectionBTransformer"/>
                                        <ref bean="spJOSSOActivationTransformer"/>
                                        <ref bean="JOSSOActivationTransformer"/>
                                        <ref bean="samlr2SPTransformer"/>

                                        <!-- PSP Transformers -->

                                        <!-- Other Transformers -->
                                        <ref bean="JOSSOExecEnvTransformer"/>
                                        <ref bean="identityLookupTransformer"/>

                                    </list>
                                </property>

                            </bean>

                            <bean name="package"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="package"/>

                                <property name="transformers">
                                    <list>
                                        <ref bean="projectSerializerTransformer"/>
                                        <ref bean="applianceBuilderTransfomer"/>
                                    </list>
                                </property>

                            </bean>

                            <bean name="install"
                                  class="com.atricore.idbus.console.lifecycle.main.transform.Phase">
                                <property name="name" value="install"/>
                                <!--
                                <property name="transformers">
                                    <list>
                                        <ref bean="applianceInstaller"/>
                                    </list>
                                </property>
                                -->
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    
</beans>