<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Define Transformers -->

    <bean name="projectSetupTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.ProjectSetupTransformer"/>

    <bean name="idauBaseComponentsTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.IdauBaseComponentsTransformer"/>

    <bean name="idpTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.IdPTransformer"/>

    <bean name="spChannelTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.SPChannelTransformer"/>

    <bean name="claimsChannelTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.ClaimsChannelTransformer"/>

    <bean name="stsTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.STSTransformer"/>

    <bean name="spTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.SPTransformer"/>

    <bean name="idpChannelTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.IdPChannelTransformer"/>

    <bean name="bpTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.BPTransformer"/>

    <bean name="bindingChannelTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.SPBindingChannelTransformer"/>

    <bean name="embeddedStoreTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.EmbeddedStoreTransformer"/>

    <bean name="externalStoreTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.ExternalStoreTransformer"/>

    <bean name="samlr2MetadataTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.SamlR2MetadataTransformer"/>

    <bean name="samlr2IdPTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.SamlR2IdPTransformer"/>

    <bean name="samlr2SPTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.SamlR2SPTransformer"/>

    <bean name="idauSerializerTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.IdauSerializerTransformer"/>

    <bean name="identityVaultTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.IdentityVaultTransformer"/>
    
    <bean name="projectSerializerTransformer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.ProjectSerializerTransformer">

        <!-- property name="outputPath" value="/tmp/atricore-idbus"/-->

        <property name="serializers">
            <list>
                <bean name="springSerializer"
                      class="org.atricore.idbus.capabilities.management.main.transform.serializers.SpringSerializer"/>
                <bean name="saml2Serializer"
                      class="org.atricore.idbus.capabilities.management.main.transform.serializers.Saml2Serializer"/>
                <bean name="velocitySerializer"
                      class="org.atricore.idbus.capabilities.management.main.transform.serializers.VelocitySerializer"/>
                <bean name="binarySerializer"
                      class="org.atricore.idbus.capabilities.management.main.transform.serializers.BinarySerializer"/>
                <bean name="copySerializer"
                      class="org.atricore.idbus.capabilities.management.main.transform.serializers.CopySerializer"/>
            </list>
        </property>

    </bean>

    <bean name="applianceBuilderTransfomer"
          class="org.atricore.idbus.capabilities.management.main.transform.transformers.ApplianceBuilderTransformer"/>
    
    <bean name="applianceBuilder"
          class="org.atricore.idbus.capabilities.management.main.transform.TransformerApplianceBuilderImpl">
        <property name="engine" ref="idauTransformingEngine"/>
    </bean>

    <bean name="idauTransformingEngine"
          class="org.atricore.idbus.capabilities.management.main.transform.TransformationEngine">

        <property name="transformers">
            <list>
                <ref bean="idauBaseComponentsTransformer"/>
                <ref bean="idauSerializerTransformer"/>
            </list>
        </property>

        <property name="walker">
            <bean name="idbusWalker"
                  class="org.atricore.idbus.capabilities.management.main.transform.ReflexiveIdentityApplianceDefinitionWalker"/>
        </property>

        <property name="cycles">
            <list>
                <bean name="create-identity-project"
                      class="org.atricore.idbus.capabilities.management.main.transform.Cycle">

                    <property name="name" value="build"/>

                    <property name="phases">
                        <list>

                            <bean name="validate"
                                  class="org.atricore.idbus.capabilities.management.main.transform.Phase">
                                <property name="name" value="validate"/>
                            </bean>


                            <bean name="generate"
                                  class="org.atricore.idbus.capabilities.management.main.transform.Phase">
                                <property name="name" value="generate"/>

                                <property name="transformers">
                                    <list>
                                        <ref bean="projectSetupTransformer"/>
                                        <ref bean="idauBaseComponentsTransformer"/>
                                        <ref bean="idpTransformer"/>
                                        <ref bean="spChannelTransformer"/>
                                        <ref bean="claimsChannelTransformer"/>
                                        <ref bean="stsTransformer"/>
                                        <ref bean="spTransformer"/>
                                        <ref bean="idpChannelTransformer"/>
                                        <ref bean="identityVaultTransformer"/>
                                        <ref bean="bpTransformer"/>
                                        <ref bean="bindingChannelTransformer"/>
                                        <!--ref bean="samlr2MetadataTransformer"/-->
                                        <ref bean="samlr2IdPTransformer"/>
                                        <ref bean="samlr2SPTransformer"/>
                                    </list>
                                </property>

                            </bean>

                            <bean name="package"
                                  class="org.atricore.idbus.capabilities.management.main.transform.Phase">
                                <property name="name" value="package"/>

                                <property name="transformers">
                                    <list>
                                        <ref bean="projectSerializerTransformer"/>
                                        <ref bean="applianceBuilderTransfomer"/>
                                    </list>
                                </property>

                            </bean>

                            <bean name="install"
                                  class="org.atricore.idbus.capabilities.management.main.transform.Phase">
                                <property name="name" value="install"/>
                                <!--
                                <property name="transformers">
                                    <list>
                                        <ref bean="applianceInstaller"/>
                                    </list>
                                </property>
                                -->
                            </bean>

                        </list>
                    </property>
                </bean>


            </list>


        </property>


    </bean>
</beans>