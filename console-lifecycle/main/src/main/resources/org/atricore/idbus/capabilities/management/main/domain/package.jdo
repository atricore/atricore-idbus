<jdo xmlns="http://java.sun.com/xml/ns/jdo/jdo"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/jdo/jdo
        http://java.sun.com/xml/ns/jdo/jdo_2_0.xsd">
    
    <package name="org.atricore.idbus.capabilities.management.main.domain">

        <class name="Group">
            <inheritance strategy="new-table"/>
            <field name="id" primary-key="true" value-strategy="native"/>
            <field name="name">
                <column name="NAME"  length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="description">
                <column name="DESCRIPTION" length="255" jdbc-type="VARCHAR"/>
            </field>
        </class>

        <class name="User">
            <inheritance strategy="new-table"/>
            <field name="id" primary-key="true" value-strategy="increment"/>
            <field name="userName">
                <column name="USERNAME"  length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="firstName">
                <column name="FIRSTNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="surename">
                <column name="SURENAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="commonName">
                <column name="COMMONNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="givenName">
                <column name="GIVENNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="initials">
                <column name="INITIALS" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="generationQualifier">
                <column name="GENERATIONQUALIFIER" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="distinguishedName">
                <column name="DISTINGUISHEDNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="email">
                <column name="EMAIL" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="telephoneNumber">
                <column name="TELEPHONENUMBER"  length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="facsimilTelephoneNumber">
                <column name="FACSIMILTELEPHONENUMBER" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="countryName">
                <column name="COUNTRYNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="localityName">
                <column name="LOCALITYNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="stateOrProvinceName">
                <column name="STATEORPROVINCENAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="streetAddress">
                <column name="STREETADDRESS" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="organizationName">
                <column name="ORGANIZATIONNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="organizationUnitName">
                <column name="ORGANIZATIONUNITNAME" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="personalTitle">
                <column name="PERSONALTITLE" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="businessCategory">
                <column name="BUSINESSCATEGORY" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="postalAddress">
                <column name="POSTALADDRESS" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="postalCode">
                <column name="POSTALCODE" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="postOfficeBox">
                <column name="POSTOFFICEBOX" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="language">
                <column name="LANGUAGE" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="accountDisabled">
                <column name="ACCOUNTDISABLED"/>
            </field>
            <field name="accountExpires">
                <column name="ACCOUNTEXPIRES" />
            </field>
            <field name="accountExpirationDate">
                <column name="ACCOUNTEXPIRATIONDATE" jdbc-type="DATE"/>
            </field>
            <field name="limitSimultaneousLogin">
                <column name="LIMITSIMULTANEOUSLOGIN" />
            </field>
            <field name="maximunLogins">
                <column name="MAXIMUNLOGINS" jdbc-type="INTEGER"/>
            </field>
            <field name="terminatePreviousSession">
                <column name="TERMINATEPREVIOUSSESSION"/>
            </field>
            <field name="preventNewSession">
                <column name="PREVENTNEWSESSION" />
            </field>
            <field name="allowUserToChangePassword">
                    <column name="ALLOWUSERTOCHANGEPASSWORD" />
            </field>
            <field name="forcePeriodicPasswordChanges">
                    <column name="FORCEPERIODICPASSWORDCHANGES" />
            </field>
            <field name="daysBetweenChanges">
                <column name="DAYSBETWEENCHANGES" jdbc-type="INTEGER"/>
            </field>
            <field name="passwordExpirationDate">
                <column name="PASSWORDEXPIRATIONDATE" jdbc-type="DATE"/>
            </field>
            <field name="notifyPasswordExpiration">
                <column name="NOTIFYPASSWORDEXPIRATION" />
            </field>
            <field name="daysBeforeExpiration">
                <column name="DAYSBEFOREEXPIRATION" jdbc-type="INTEGER"/>
            </field>
            <field name="userPassword">
                <column name="USERPASSWORD" length="255" jdbc-type="VARCHAR"/>
            </field>
            <field name="userCertificate">
                <column name="USERCERTIFICATE"/>
            </field>
            <field name="automaticallyGeneratePassword">
                <column name="AUTOMATICALLYGENERATEPASSWORD" />
            </field>
            <field name="emailNewPasword">
                <column name="EMAILNEWPASSWORD" />
            </field>
            <field name="groups" default-fetch-group="true">
                <array/>
                <join column="USER_ID"/>
                <element column = "ID" primary-key="true" value-strategy="increment"/>
                <element column="GROUP_ID"/>
                <order column="GROUP_ORDER_IDX"/>
                <foreign-key name="USER_GROUPS_FK" delete-action="cascade"/>
            </field>
        </class>

        <class name="IdentityAppliance" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>

            <field name="idApplianceDefinition" default-fetch-group="true" dependent="true"/>
            <field name="idApplianceDeployment" default-fetch-group="true" dependent="true"/>
        </class>

        <class name="IdentityApplianceDeployment" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>

            <field name="idaus" default-fetch-group="true">
                <join delete-action="cascade"/>
            </field>
        </class>

         <!--<class name="IdentityApplianceState" detachable="true">-->
            <!--<field name="id" value-strategy="native" primary-key="true"/>-->

        <!--</class>-->

        <class name="IdentityApplianceUnit" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>

            <field name="providers" default-fetch-group="true">
                <join/>
            </field>                
        </class>

        <class name="IdentityServer" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

    </package>

    <!-- TODO : Split this file ... ! -->
    <package name="org.atricore.idbus.capabilities.management.main.domain.metadata">

        <class name="IdentityApplianceDefinition" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>
            <field name="name" />

            <field name="providers" default-fetch-group="true" persistence-modifier="persistent" mapped-by="identityAppliance">
                <!--<join delete-action="cascade"/>-->
                <collection dependent-element="true"/>
            </field>

            <field name="identityVaults" default-fetch-group="true" persistence-modifier="persistent">
				<!--<join delete-action="cascade"/>-->
                <collection dependent-element="true" />
			</field>

            <field name="location" default-fetch-group="true" dependent="true"/>

            <field name="supportedRoles" default-fetch-group="true" />

            <field name="activeFeatures" default-fetch-group="true" />

            <field name="certificate" default-fetch-group="true" />

        </class>
        <!-- ================================================================= -->
        <!-- Provider -->
        <!-- ================================================================= -->
        <class name="Provider" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
            <field name="identityAppliance" default-fetch-group="true" persistence-modifier="persistent">
                <column name="IDAPPLIANCEDEFINITION_ID"/>                
            </field>
            <field name="location" default-fetch-group="true" dependent="true"/>
        </class>

        <class name="LocalProvider" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="defaultChannel" default-fetch-group="true" dependent="true" />
            <field name="channels" default-fetch-group="true">
                <join delete-action="cascade"/>
            </field>
            <field name="config" persistence-modifier="persistent" default-fetch-group="true" dependent="true"/>
        </class>

        <class name="RemoteProvider" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="metadata" default-fetch-group="true" dependent="true"/>
        </class>

        <class name="ServiceProvider" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="bindingChannel" default-fetch-group="true" dependent="true"/>
        </class>

        <class name="IdentityProvider" detachable="true">
            <inheritance strategy="new-table"/>
        </class>

        <class name="BindingProvider" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="bindingChannel" default-fetch-group="true" dependent="true"/>
        </class>

        <!-- ================================================================= -->
        <!-- Channel -->
        <!-- ================================================================= -->

        <class name="Channel" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
            <field name="target" default-fetch-group="true"/>
            <field name="location" default-fetch-group="true" dependent="true"/>
            <field name="activeBindings" default-fetch-group="true">
                <join delete-action="cascade"/>
            </field>
            <field name="activeProfiles" default-fetch-group="true">
                <join delete-action="cascade"/>
            </field>
        </class>

        <class name="BindingChannel" detachable="true">
            <inheritance strategy="new-table"/>
        </class>

        <class name="IdentityProviderChannel" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="identityVault" default-fetch-group="true" />
            <field name="userInformationLookup" default-fetch-group="true" />
            <field name="accountLinkagePolicy" default-fetch-group="true" />
            <field name="authenticationContract" default-fetch-group="true" />
            <field name="authenticationMechanism" default-fetch-group="true" />
        </class>

        <class name="ServiceProviderChannel" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="identityVault" default-fetch-group="true" />

            <field name="attributeProfile" default-fetch-group="true" />
            <field name="authenticationMechanism" default-fetch-group="true" />
            <field name="userInformationLookup" default-fetch-group="true" />
            <field name="authenticationContract" default-fetch-group="true" />
            <field name="emissionPolicy" default-fetch-group="true" />
        </class>

        <!-- ================================================================= -->
        <!-- Identity Vault -->
        <!-- ================================================================= -->

        <class name="IdentityVault" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>
            <inheritance strategy="new-table"/>            
            <field name="userInformationLookup" default-fetch-group="true"/>
        </class>

        <class name="DbIdentityVault" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="driver" default-fetch-group="true" />
        </class>

        <class name="LdapIdentityVault" detachable="true">
            <inheritance strategy="new-table"/>
        </class>

        <!-- ================================================================= -->
        <!-- Provider Config -->
        <!-- ================================================================= -->

        <class name="AbstractProviderConfig" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>
            <inheritance strategy="new-table"/>
        </class>

        <class name="JossoBPConfig" detachable="true">
            <inheritance strategy="new-table"/>
        </class>

        <class name="SamlR2ProviderConfig" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="signer" default-fetch-group="true" dependent="true"/>
            <field name="encrypter" default-fetch-group="true" dependent="true"/>
        </class>

        <class name="SamlR2IDPConfig" detachable="true">
            <inheritance strategy="new-table"/>
        </class>

        <class name="SamlR2SPConfig" detachable="true">
            <inheritance strategy="new-table"/>
        </class>

        <!-- ================================================================= -->
        <!-- Other -->
        <!-- ================================================================= -->

        <class name="Location" detachable="true">
            <field name="id" value-strategy="native" primary-key="true"/>
            <inheritance strategy="new-table"/>
        </class>

        <class name="UserInformationLookup" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

        <class name="Resource" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
            <field name="value" default-fetch-group="true">
                <!--<column name="VALUE" length="1048576" jdbc-type="BLOB"/>-->                
            </field>
        </class>

        <class name="AccountLinkagePolicy" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

        <class name="AuthenticationMechanism" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

        <class name="AuthenticationContract" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

        <class name="AttributeProfile" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

        <class name="AuthenticationAssertionEmissionPolicy" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
        </class>

        <class name="Keystore" detachable="true">
            <inheritance strategy="new-table"/>
            <field name="id" value-strategy="native" primary-key="true"/>
            <field name="store" default-fetch-group="true" dependent="true"/>
        </class>    

    </package>
</jdo>