<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>org.atricore.idbus.kernel.common</groupId>
        <artifactId>common</artifactId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <groupId>org.atricore.idbus.kernel.common</groupId>
    <artifactId>org.atricore.idbus.kernel.common.wst</artifactId>
    <name>Atricore IDBus :: Kernel : WS-Trust Protocol Binding</name>
    <description>WS-Trust Protocol Binding</description>
    <packaging>bundle</packaging>

    <dependencies>

        <dependency>
            <groupId>org.apache.servicemix.specs</groupId>
            <artifactId>org.apache.servicemix.specs.jaxb-api-2.1</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.servicemix.specs</groupId>
            <artifactId>org.apache.servicemix.specs.jaxws-api-${jaxws.api.version}</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-ws-metadata_2.0_spec</artifactId>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <executions>
                    <execution>
                        <id>generate-test-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <sourceRoot>${basedir}/target/generated</sourceRoot>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/org/atricore/idbus/kernel/common/wst/ws-trust.wsdl</wsdl>
                                    <extraargs>
                                        <extraarg>-verbose</extraarg>
                                        <extraarg>-impl</extraarg>
                                        <extraarg>-client</extraarg>
                                        <extraarg>-b</extraarg>
                                        <extraarg>
                                            ${basedir}/src/main/resources/org/atricore/idbus/kernel/common/wst/ws-trust-binding.xml
                                        </extraarg>
                                        <extraarg>-catalog</extraarg>
                                        <extraarg>${basedir}/src/main/resources/catalog.xml</extraarg>
                                    </extraargs>
                                </wsdlOption>
                            </wsdlOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${felix.plugin.version}</version>
                <configuration>
                    <instructions>
                        <Bundle-Name>Atricore IDBus :: Kernel : WS-Trust Binding</Bundle-Name>
                        <Bundle-Description>WS-Trust Protocol Binding</Bundle-Description>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            org.oasis_open.docs.wss._2004._01.oasis_200401_wss_wssecurity_secext_1_0;version=${pom.version},
                            org.oasis_open.docs.wss._2004._01.oasis_200401_wss_wssecurity_utility_1_0;version=${pom.version},
                            org.w3._2000._09.xmldsig_;version=${pom.version},
                            org.xmlsoap.schemas.ws._2004._08.addressing;version=${pom.version},
                            org.xmlsoap.schemas.ws._2004._09.policy;version=${pom.version},
                            org.xmlsoap.schemas.ws._2005._02.trust;version=${pom.version},
                            org.xmlsoap.schemas.ws._2005._02.trust.wsdl;version=${pom.version},
                        </Export-Package>
                        <Import-Package>
                            javax.xml.bind,
                            javax.jws,
                            javax.jws.soap,
                            javax.xml.bind.annotation,
                            javax.xml.namespace,
                            javax.xml.ws,
                            !javax.xml.bind.annotation.adapters,
                            *
                        </Import-Package>
                        <Private-Package/>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
