            <plugin>
              <artifactId>maven-antrun-plugin</artifactId>
              <version>1.1</version>  
              <executions>
                <execution>
                  <phase>generate-sources</phase>
                  <goals>
                    <goal>run</goal>
                  </goals>
                  <configuration>
                    <tasks>
                      <taskdef classname="com.sun.tools.xjc.XJCTask" classpathref="maven.compile.classpath" name="xjc" />
                      <mkdir dir="${project.build.directory}/jaxws" />
