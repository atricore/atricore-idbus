<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.atricore.idbus.console.brandservice</groupId>
        <artifactId>console-brandservice</artifactId>
        <version>1.3.0-SNAPSHOT</version>
    </parent>

    <artifactId>com.atricore.idbus.console.brandservice.main</artifactId>
    <packaging>bundle</packaging>
    <version>1.3.0-SNAPSHOT</version>

    <name>Atricore Console :: Brand Service Main</name>

    <properties>
    </properties>

    <dependencies>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context-support</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-orm</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.osgi</groupId>
            <artifactId>spring-osgi-core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.kernel.common</groupId>
            <artifactId>org.atricore.idbus.kernel.common.support</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.javax-jdo2-v2_3-ec</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.datanucleus-v2_1_2</artifactId>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/filtered-resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>

            <plugin>
                <groupId>org.datanucleus</groupId>
                <artifactId>maven-datanucleus-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <fork>false</fork>

                    <log4jConfiguration>${basedir}/src/main/jdo/log4j-datanucleus.properties</log4jConfiguration>
                    <verbose>true</verbose>
                    <props>${basedir}/datanucleus.properties</props>
                    <outputFile>idbus-server-management.ddl</outputFile>
                </configuration>

                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>enhance</goal>
                        </goals>
                        <configuration>
                            <log4jConfiguration>${basedir}/src/main/jdo/log4j-datanucleus.properties</log4jConfiguration>
                        </configuration>
                    </execution>

                </executions>

                <dependencies>

                    <dependency>
                        <groupId>org.datanucleus</groupId>
                        <artifactId>datanucleus-core</artifactId>
                        <version>${datanucleus.version}</version>
                    </dependency>

                    <dependency>
                        <groupId>org.datanucleus</groupId>
                        <artifactId>datanucleus-rdbms</artifactId>
                        <version>${datanucleus.version}</version>
                    </dependency>

                    <dependency>
                        <groupId>org.datanucleus</groupId>
                        <artifactId>datanucleus-enhancer</artifactId>
                        <version>[2.1, 2.2)</version>
                    </dependency>

                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            ${project.artifactId}.*; version="${project.version}"
                        </Export-Package>
                        <Import-Package>
                            !${project.artifactId}*,
                            org.apache.commons.logging; version="[1.0,1.1.99)"; provider=paxlogging,
                            org.apache.log4j; version="[1.2,1.3)"; provider=paxlogging,
                            javax.jdo; version="[2.3.0,2.3.0]",
                            javax.jdo.annotations; version="[2.3.0,2.3.0]",
                            javax.jdo.datastore; version="[2.3.0,2.3.0]",
                            javax.jdo.identity; version="[2.3.0,2.3.0]",
                            javax.jdo.listener; version="[2.3.0,2.3.0]",
                            javax.jdo.metadata; version="[2.3.0,2.3.0]",
                            javax.jdo.spi; version="[2.3.0,2.3.0]",
                            javax.management,
                            javax.transaction;resolution:=optional,
                            javax.transaction.xa;resolution:=optional,
                            javax.naming,
                            javax.naming.spi,
                            javax.xml.xpath,
                            javax.xml.parsers,
                            javax.xml.stream,
                            javax.xml.transform,
                            javax.xml.transform.dom,
                            javax.xml.transform.stream,
                            javax.xml.validation,
                            javax.sql,
                            org.atricore.idbus.bundles.apache.derby,
                            org.apache.derby.jdbc,
                            org.hsqldb,
                            org.aopalliance.aop,
                            org.springframework.aop; version="[${spring.version},${spring.version}]",
                            org.springframework.aop.framework; version="[${spring.version},${spring.version}]",
                            org.springframework.core.io,
                            org.springframework.context; version="[${spring.version},${spring.version}]",
                            org.springframework.beans; version="[${spring.version},${spring.version}]",
                            org.springframework.beans.factory; version="[${spring.version},${spring.version}]",
                            org.springframework.beans.factory.config; version="[${spring.version},${spring.version}]",
                            org.springframework.web.context; version="[${spring.version},${spring.version}]",
                            org.springframework.web.context.support; version="[${spring.version},${spring.version}]",
                            org.springframework.orm.jdo; version="[${spring.version},${spring.version}]",
                            org.springframework.orm.jdo.support; version="[${spring.version},${spring.version}]",
                            org.springframework.osgi.web.context.support; version=["${spring.osgi.version},${spring.osgi.version}"],
                            org.springframework.osgi.context; version=["${spring.osgi.version},${spring.osgi.version}"],
                            oracle.jdbc.driver;resolution:=optional,
                            *
                        </Import-Package>
                        <Require-Bundle>
                            org.datanucleus,
                            org.atricore.idbus.bundles.apache-derby-network-v10_5_3_0_1
                        </Require-Bundle>
                        <Private-Package>!*</Private-Package>
                        <Spring-Context>*;timeout:=60;wait-for-dependencies:=true;create-asynchronously:=false</Spring-Context>
                        <_versionpolicy>${bnd.version.policy}</_versionpolicy>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>

    </build>


</project>
