#!/bin/bash

./start
status=$?
if [ $status -ne 0 ]; then
  echo "Failed to start my_first_process: $status"
  exit $status
fi

./my_second_process -D
status=$?
if [ $status -ne 0 ]; then
  echo "Failed to start my_second_process: $status"
  exit $status
fi

while sleep 60; do
  ps aux | grep java |grep -q -v grep
  JOSSO_STATUS=$?

  if [ $JOSSO_STATUS -ne 0 ]; then
    echo "JOSSO processes has already exited."
    exit 1
  fi
done