<!--
IdentityMemoryStore user definitions.
-->
<josso-users>
    <users>
        <user>
            <name>user1</name>
            <!-- Optionally, define some properties for this user -->
            <properties>
                <property>
                    <name>user.phoneNumber</name>
                    <value>444-555-666</value>
                </property>

            </properties>
            <!-- Optional comma sepparated set of roles, must be defined below -->
            <roles>role3</roles>
        </user>
        <user>
            <name>user2</name>
            <!-- Optionally, define some properties for this user -->
            <properties>
                <property>
                    <name>user.name</name>
                    <value>User 2 Name</value>
                </property>
                <property>
                    <name>user.lastName</name>
                    <value>User 2 Last Name</value>
                </property>
                <property>
                    <name>user.registrationDate</name>
                    <value>2004/09/10</value>
                </property>
            </properties>
            <!-- Optional comma sepparated set of roles, must be defined below -->
            <roles>role2</roles>
        </user>
        <user>
            <name>user3</name>
            <!-- Optionally, define some properties for this user -->
            <properties>
                <property>
                    <name>user.name</name>
                    <value>User 3 Name</value>
                </property>
                <property>
                    <name>user.lastName</name>
                    <value>User 3 Last Name</value>
                </property>
                <property>
                    <name>user.registrationDate</name>
                    <value>2005/01/1</value>
                </property>
            </properties>
            <!-- Optional comma sepparated set of roles, must be defined below -->
            <roles>role1</roles>
        </user>
    </users>
    <!-- Roles definitions -->
    <roles>
        <role>
            <name>role1</name>
        </role>
        <role>
            <name>role2</name>
        </role>
        <role>
            <name>role3</name>
        </role>
    </roles>
</josso-users>
