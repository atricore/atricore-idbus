<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.atricore.idbus</groupId>
        <artifactId>all</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>org.atricore.idbus.idojos</groupId>
    <artifactId>org.atricore.idbus.idojos.serializedsessionstore</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>Atricore IDBus :: IDOJO : Serialized Session Store</name>

    <properties>
        <spring.version>2.5.6.SEC01</spring.version>
        <xbean.version>3.4.3</xbean.version>
        <junit.version>4.4</junit.version>
        <log4j.version>1.2.16</log4j.version>
        <felix.plugin.version>2.1.0</felix.plugin.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.xbean</groupId>
                <artifactId>maven-xbean-plugin</artifactId>
                <version>${xbean.version}</version>
                <executions>
                    <execution>
                        <configuration>
                            <namespace>urn:org:atricore:idbus:idojos:serializedsessionstore</namespace>
                        </configuration>
                        <goals>
                            <goal>mapping</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${felix.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Name>Atricore IDBus :: IDOJO : Serialized Session Store Component</Bundle-Name>
                        <Bundle-Description>Serialized Session Store Component</Bundle-Description>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Export-Package>org.atricore.idbus.idojos.serializedsessionstore.*;version=${pom.version}</Export-Package>
                        <Private-Package>!*</Private-Package>
                        <Import-Package>
                               org.apache.commons.logging; version="[1.0,1.1.99)"; provider=paxlogging,
                               org.apache.log4j; version="[1.2,1.3)"; provider=paxlogging,
                               *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>

        </plugins>
    </build>


    <dependencies>
        <dependency>
            <groupId>org.atricore.idbus.idojos</groupId>
            <artifactId>org.atricore.idbus.idojos.memorysessionstore</artifactId>
            <version>${pom.version}</version>
        </dependency>
        <dependency>
            <groupId>org.atricore.idbus.kernel</groupId>
            <artifactId>org.atricore.idbus.kernel.main</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>${log4j.version}</version>
            <scope>test</scope>
        </dependency>

    </dependencies>
</project>
