    <destination id="signOnService">
        <properties>
            <factory>spring</factory>
            <source>signOnAjaxServiceBean</source>
        </properties>
    </destination>

    <destination id="identityApplianceManagementService">
        <properties>
            <factory>spring</factory>
            <source>identityApplianceManagementAjaxServiceBean</source>
        </properties>
    </destination>

    <destination id="licenseManagementService">
        <properties>
            <factory>spring</factory>
            <source>licenseManagementAjaxServiceBean</source>
        </properties>
    </destination>

