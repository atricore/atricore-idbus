    <destination id="liveUpdateService">
        <properties>
            <factory>spring</factory>
            <source>liveUpdateAjaxService</source>
        </properties>
    </destination>

    <destination id="serviceConfigurationManagementService">
        <properties>
            <factory>spring</factory>
            <source>serviceConfigurationManagerAjaxServiceBean</source>
        </properties>
    </destination>

</service>
