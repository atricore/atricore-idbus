<?xml version="1.0" encoding="utf-8"?>
<objects
        xmlns="http://www.springactionscript.org/schema/objects"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.springactionscript.org/schema/objects
        http://www.springactionscript.org/schema/objects/spring-actionscript-objects-1.0.xsd">

    <!-- EE Console Extensions -->

    <!-- LiveUpdate -->
    <object id="liveUpdateProxy" class="com.atricore.idbus.console.liveupdate.main.model.LiveUpdateProxy"/>

    <object id="liveUpdateMediator" class="com.atricore.idbus.console.liveupdate.main.LiveUpdateMediator">
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
        <property name="liveUpdatePopUpManager" ref="liveUpdatePopUpManager"/>

        <!-- Register Commands -->
        <property name="applyUpdateCommand" ref="applyUpdateCommand"/>
        <property name="checkForUpdatesCommand" ref="checkForUpdatesCommand"/>
        <property name="getUpdateProfileCommand" ref="getUpdateProfileCommand"/>
        <property name="listUpdatesCommand" ref="listUpdatesCommand"/>
        <property name="loadUpdateSchemeCommand" ref="loadUpdateSchemeCommand"/>
        <property name="saveUpdateSchemeCommand" ref="saveUpdateSchemeCommand"/>
    </object>

    <object id="notificationSchemeMediator"
            class="com.atricore.idbus.console.liveupdate.main.view.notifications.NotificationSchemeMediator" >
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="applyUpdateCommand"
            class="com.atricore.idbus.console.liveupdate.main.controller.ApplyUpdateCommand">
        <property name="registry" ref="serviceRegistry"/>
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="getUpdateProfileCommand"
            class="com.atricore.idbus.console.liveupdate.main.controller.GetUpdateProfileCommand">
        <property name="registry" ref="serviceRegistry"/>
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="checkForUpdatesCommand"
            class="com.atricore.idbus.console.liveupdate.main.controller.CheckForUpdatesCommand">
        <property name="registry" ref="serviceRegistry"/>
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="listUpdatesCommand"
            class="com.atricore.idbus.console.liveupdate.main.controller.ListUpdatesCommand">
        <property name="registry" ref="serviceRegistry"/>
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="loadUpdateSchemeCommand"
            class="com.atricore.idbus.console.liveupdate.main.controller.LoadUpdateSchemeCommand">
        <property name="registry" ref="serviceRegistry"/>
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="saveUpdateSchemeCommand"
            class="com.atricore.idbus.console.liveupdate.main.controller.SaveUpdateSchemeCommand">
        <property name="registry" ref="serviceRegistry"/>
        <property name="liveUpdateProxy" ref="liveUpdateProxy"/>
    </object>

    <object id="liveUpdatePopUpManager"
            class="com.atricore.idbus.console.liveupdate.main.view.LiveUpdatePopUpManager">
        <property name="notificationSchemeMediator" ref="notificationSchemeMediator"/>
    </object>

    <!-- LiveUpdate Settings Menu -->
    <object id="liveServicesMenuDrawer" class="com.atricore.idbus.console.settings.main.menu.model.SettingsMenuDrawer">
        <property name="label" value="Live Services"/>
        <property name="shortDescription" value="Live Services Drawer"/>
        <property name="viewPriority" value="10"/>
        <property name="children">
            <array>
                <value><ref>liveUpdateMenuEntry</ref></value>
            </array>
        </property>
    </object>

    <object id="liveUpdateMenuEntry" class="com.atricore.idbus.console.settings.main.menu.model.SettingsMenuEntry">
        <property name="label" value="LiveUpdate"/>
        <property name="shortDescription" value="LiveUpdate Entry"/>
        <property name="iconName" value="liveUpdate"/>
        <property name="mediatorName" value="liveUpdateMediator"/>
        <property name="viewName" value="liveUpdateView"/>
    </object>

    <object id="liveUpdateView" class="com.atricore.idbus.console.liveupdate.main.LiveUpdateView"/>

    <!-- Branding Factory -->
    <object id="brandingFactory" class="com.atricore.idbus.console.branding.ee.AtricoreEEBrandingFactory"/>

    <!-- Palette Provider -->
    <object id="paletteProvider" class="com.atricore.idbus.console.branding.ee.EEPaletteItemProvider"/>

</objects>