<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:ns2="http://www.springframework.org/schema/osgi" xmlns:ns3="http://www.springframework.org/schema/tool" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">
    <description>oauth2 : BP Configuration generated by Atricore Identity Bus Server on 1 Feb 2012 18:41:24 GMT </description>
    <bean class="org.atricore.idbus.kernel.main.mediation.provider.BindingProviderImpl" name="oauth2">
        <property name="name">
            <value>oauth2</value>
        </property>
        <property name="role">
            <value>{urn:org:atricore:idbus:josso:metadata}JOSSOAgentDescriptor</value>
        </property>
        <property name="unitContainer">
            <ref bean="ida3-container"/>
        </property>
        <property name="cotManager">
            <ref bean="ida3-cot-manager"/>
        </property>
        <property name="stateManager">
            <ref bean="ida3-state-manager"/>
        </property>
        <property name="bindingChannel">
            <ref bean="oauth2-josso-binding-channel"/>
        </property>
    </bean>
    <bean class="org.atricore.idbus.capabilities.sso.management.internal.BindingProviderMBeanImpl" name="oauth2-mbean">
        <property name="bindingProvider">
            <ref bean="oauth2"/>
        </property>
    </bean>
    <bean class="org.springframework.jmx.export.MBeanExporter" name="oauth2-mbean-exporter">
        <property name="server">
            <ref bean="mBeanServer"/>
        </property>
        <property name="beans">
            <map>
                <entry value-ref="oauth2-mbean" key-ref="oauth2-mbean-key"/>
            </map>
        </property>
    </bean>
    <bean class="java.lang.String" name="oauth2-mbean-key">
        <constructor-arg type="java.lang.String" index="0">
            <value>com.ida3.idau:type=BindingProvider,name=ida3.oauth2</value>
        </constructor-arg>
    </bean>
    <bean class="org.atricore.idbus.kernel.main.mediation.binding.BindingChannelImpl" name="oauth2-josso-binding-channel">
        <property name="name">
            <value>oauth2-josso-binding-channel</value>
        </property>
        <property name="description">
            <value>oauth2</value>
        </property>
        <property name="provider">
            <ref bean="oauth2"/>
        </property>
        <property name="location">
            <value>http://localhost:8081/IDBUS/IDA3/MSTR</value>
        </property>
        <property name="unitContainer">
            <ref bean="ida3-container"/>
        </property>
        <property name="identityMediator">
            <ref bean="oauth2-binding-mediator"/>
        </property>
        <property name="endpoints">
            <list>
                <bean class="org.atricore.idbus.kernel.main.mediation.endpoint.IdentityMediationEndpointImpl" name="oauth2-binding-ssop-acs-artifact">
                    <property name="name">
                        <value>oauth2-binding-ssop-acs-artifact</value>
                    </property>
                    <property name="type">
                        <value>{urn:org:atricore:idbus:oauth2:metadata}AssertionConsumerService</value>
                    </property>
                    <property name="binding">
                        <value>urn:org:atricore:idbus:sso:bindings:HTTP-Artifact</value>
                    </property>
                    <property name="location">
                        <value>/SSO/ACS/ARTIFACT</value>
                    </property>
                </bean>
                <bean class="org.atricore.idbus.kernel.main.mediation.endpoint.IdentityMediationEndpointImpl" name="oauth2-binding-ssop-sso-redir">
                    <property name="name">
                        <value>oauth2-binding-ssop-sso-redir</value>
                    </property>
                    <property name="type">
                        <value>{urn:org:atricore:idbus:oauth2:metadata}SingleSignOnService</value>
                    </property>
                    <property name="binding">
                        <value>urn:org:atricore:idbus:sso:bindings:HTTP-Redirect</value>
                    </property>
                    <property name="location">
                        <value>/SSO/SSO/REDIR</value>
                    </property>
                </bean>

            </list>
        </property>
    </bean>
    <bean class="org.atricore.idbus.capabilities.oauth2.main.OAuth2BPMediator" name="oauth2-binding-mediator">
        <property name="logMessages">
            <value>true</value>
        </property>
        <property name="bindingFactory">
            <bean class="org.atricore.idbus.capabilities.oauth2.main.binding.OAuth2BindingFactory"/>
        </property>
        <property name="artifactQueueManager">
            <ref bean="ida3-aqm"/>
        </property>
        <property name="errorUrl">
            <value>http://localhost:8081/idbus-ui/error.do</value>
        </property>
        <property name="warningUrl">
            <value>http://localhost:8081/idbus-ui/warn/policy-enforcement.do</value>
        </property>
        <property name="spAlias">
            <value>http://localhost:8081/IDBUS/IDA3/SP1/SAML2/MD</value>
        </property>

        <property name="logger">
            <bean class="org.atricore.idbus.kernel.main.mediation.camel.logging.DefaultMediationLogger" name="oauth2-mediation-logger">
                <property name="category">
                    <value>com.ida3.ida3.wire.oauth2</value>
                </property>
                <property name="messageBuilders">
                    <list>
                        <!-- TODO : OAuth2 logger -->
                        <bean class="org.atricore.idbus.capabilities.oauth2.main.binding.logging.OAuth2LogMessageBuilder"/>
                        <bean class="org.atricore.idbus.kernel.main.mediation.camel.component.logging.CamelLogMessageBuilder"/>
                        <bean class="org.atricore.idbus.kernel.main.mediation.camel.component.logging.HttpLogMessageBuilder"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="resourceServer">
            <bean class="org.atricore.idbus.capabilities.oauth2.main.ResourceServer">
                <property name="name">
                    <value>mstr</value>
                </property>
                <property name="accessTokenParam">
                    <value>access_token</value>
                </property>
                <property name="resourceLocation">
                    <value>https://diageomstr.accentureanalytics.com/MicroStrategy/servlet/mstrWeb?evt=3010&amp;src=mstrWeb.3010&amp;Port=0&amp;Project=Intouch&amp;Server=AMSPRDMSTR001.DIAGEO.COM&amp;loginReq=true</value>
                </property>
            </bean>
        </property>
    </bean>
</beans>
