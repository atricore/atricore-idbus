    <properties>
        <felix.plugin.version>3.5.0</felix.plugin.version>
        <!--felix.plugin.version>2.1.0-SNAPSHOT</felix.plugin.version-->

        <!-- IDBUS -->
        <idbus.kernel.version>1.5.0-SNAPSHOT</idbus.kernel.version>
        <idbus.examples.version>1.5.0-SNAPSHOT</idbus.examples.version>
        <idbus.app.server.version>1.5.0-SNAPSHOT</idbus.app.server.version>

