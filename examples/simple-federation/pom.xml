        <idbus.idojo.ldapidentitystore.version>1.5.0-SNAPSHOT</idbus.idojo.ldapidentitystore.version>
        <idbus.idojo.memoryidentitystore.version>1.5.0-SNAPSHOT</idbus.idojo.memoryidentitystore.version>
