    <bean id="dozerMapper" class="org.dozer.DozerBeanMapper">
        <property name="mappingFiles">
          <list>
            <value>com/atricore/idbus/console/services/dto/dozer-mappings.xml</value>
          </list>
        </property>
    </bean>

    <bean id="userProvisioningAjaxServiceBean" class="com.atricore.idbus.console.services.impl.UserProvisioningAjaxServiceImpl">
        <property name="provisioningService">
            <ref local="userProvisioningServiceManagerBean"/>
        </property>
        <property name="dozerMapper" ref="dozerMapper" />
    </bean>

    <bean id="userProvisioningServiceManagerBean" class="org.atricore.idbus.capabilities.management.main.impl.UserProvisioningServiceHashImpl">
        <property name="passwordHashUtil" ref="passwordHashUtil"/>
    </bean>

    <bean name="passwordHashUtil"
          class="org.atricore.idbus.capabilities.management.main.util.PasswordHashUtil">
            <property name="hashAlgorithm" value="MD5"/>
            <property name="hashEncoding" value="HEX"/>
    </bean>

    <bean id="identityApplianceManagementAjaxServiceBean" class="com.atricore.idbus.console.services.impl.IdentityApplianceManagementAjaxServiceImpl">
        <property name="idApplianceManagementService">
            <ref local="identityApplianceManagementServiceBean"/>
        </property>
        <property name="dozerMapper" ref="dozerMapper" />
    </bean>

    <bean id="identityApplianceManagementServiceBean" class="org.atricore.idbus.capabilities.management.main.impl.IdentityApplianceManagementServiceHashImpl">
    </bean>

