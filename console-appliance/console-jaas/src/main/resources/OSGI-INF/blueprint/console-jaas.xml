<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaas="http://karaf.apache.org/xmlns/jaas/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <!-- Allow usage of System properties, especially the karaf.base property -->
    <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]"/>

    <!-- AdminConfig property place holder for the org.apache.karaf.jaas  -->
    <cm:property-placeholder persistent-id="com.atricore.idbus.console.jaas">
        <cm:default-properties>
            <cm:property name="jdbc.datasourceUrl" value="osgi:javax.sql.DataSource/(&amp;(jdbcDS=default-pst))
" />
            <cm:property name="jdbc.passwordQuery" value="SELECT  USERPASSWORD FROM ATC_USER WHERE USERNAME = ?" />
            <cm:property name="jdbc.roleQuery" value="SELECT G.NAME FROM ATC_GROUP G JOIN ATC_USER_GROUP GU ON G.ID = GU.GROUP_ID JOIN ATC_USER U ON GU.USER_ID = U.ID  WHERE U.USERNAME = ?" />
        </cm:default-properties>
    </cm:property-placeholder>

    <jaas:config name="atricore">
        <jaas:module className="org.apache.karaf.jaas.modules.jdbc.JDBCLoginModule" flags="required">
            datasource = ${jdbc.datasourceUrl}
            query.password = ${jdbc.passwordQuery}
            query.role = ${jdbc.roleQuery}
            encryption.enabled = true
            encryption.name = basic
            encryption.algorithm = MD5
            encryption.encoding = hexadecimal
        </jaas:module>

        <jaas:module className="com.atricore.idbus.console.appliance.jaas.RBACLoginModule" flags="required">
            allowed.roles = Administrators
        </jaas:module>

    </jaas:config>

    <bean id="jaasAuthenticator" class="com.atricore.idbus.console.appliance.jaas.JaasAuthenticator">
        <property name="realm" value="atricore"/>
    </bean>

    <service id="osgiJaasAuthenticator"
             ref="jaasAuthenticator"
             interface="com.atricore.idbus.console.appliance.jaas.JaasAuthenticator"/>

</blueprint>
