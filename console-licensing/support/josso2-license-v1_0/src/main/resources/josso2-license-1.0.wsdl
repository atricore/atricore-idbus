<wsdl:definitions
        name="JOSSO 2 Licensing Service"
        targetNamespace="urn:com:atricore:josso2:licensing:1.0:wsdl"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:tns="urn:com:atricore:josso2:licensing:1.0:wsdl"
        xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
        xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
        xmlns:lic="urn:com:atricore:josso2:licensing:1.0:license"
        xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
        xmlns="http://schemas.xmlsoap.org/wsdl/">

    <wsdl:types>
        <xsd:schema>
            <xsd:import namespace="urn:com:atricore:josso2:licensing:1.0:license"
                        schemaLocation="josso2-license-1.0.xsd"/>
        </xsd:schema>

    </wsdl:types>

    <!-- protocol message definitions -->
    <wsdl:message name="LicenseRequestMessage">
        <wsdl:part name="body" element="lic:Request"/>
    </wsdl:message>

    <wsdl:message name="LicenseResponseMessage">
        <wsdl:part name="body" element="lic:Response"/>
    </wsdl:message>

    <wsdl:portType name="LicenseRequestPortType">

        <wsdl:operation name="LicenseRequest">
            <wsdl:input name="LicenseRequestInput"
                        message="tns:LicenseRequestMessage"/>
            <wsdl:output name="LicenseResponseOutput"
                         message="tns:LicenseResponseMessage"/>
        </wsdl:operation>

    </wsdl:portType>

    <wsdl:binding name="LicenseSoapBinding" type="tns:LicenseRequestPortType">
        <soap:binding style="document"
                      transport="http://schemas.xmlsoap.org/soap/http"/>

        <wsdl:operation name="LicenseRequest">
            <soap:operation style="document"
                            soapAction="http://www.oasis-open.org/committees/security"/>

            <wsdl:input name="LicenseRequestInput">
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output name="LicenseResponseOutput">
                <soap:body use="literal"/>
            </wsdl:output>
        </wsdl:operation>

    </wsdl:binding>

    <wsdl:service name="LicenseService">
        <documentation>License V1.0 Service</documentation>
        <port name="soap"
              binding="tns:LicenseSoapBinding">
            <soap:address location="http://localhost:8192/LicenseService/"/>
        </port>
    </wsdl:service>


</wsdl:definitions>