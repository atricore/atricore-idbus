<s:beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:osgi="http://www.springframework.org/schema/osgi"
         xmlns:s="http://www.springframework.org/schema/beans"
         xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                             http://www.springframework.org/schema/osgi  http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="jitScimProvisioning" class="org.atricore.idbus.connectors.jitscim.JITScimProvisioning">
        <property name="name" value="jit-scim-provisioning"/>
        <property name="description" value="JIT SCIM Provisioning"/>
        <property name="endpoint" value="http://localhost:8085"/>
        <property name="consumerKey" value="testConsumerKey"/>
        <property name="consumerSecret" value="testConsumerSecret"/>
        <property name="tokenId" value="testTokenId"/>
        <property name="tokenSecret" value="testTokenSecret"/>
        <property name="realm" value="testRealm"/>
    </bean>

    <osgi:service id="jitScimProvisioningSvc" ref="jitScimProvisioning"
                  interface="org.atricore.idbus.capabilities.sts.main.SubjectAuthenticationPolicy">
        <service-properties>
            <entry key="policyName" value="jit-scim-provisioning"/>
        </service-properties>
    </osgi:service>


</s:beans>