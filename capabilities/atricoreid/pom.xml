<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
        <groupId>org.atricore.idbus</groupId>
        <artifactId>idbus-all</artifactId>
        <version>1.5.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>org.atricore.idbus.capabilities.atricoreid</groupId>
    <artifactId>atricoreid</artifactId>
    <version>1.5.0-SNAPSHOT</version>
    <name>Atricore IDBus :: Capability : AtricoreID POM</name>
    <packaging>pom</packaging>

    <modelVersion>4.0.0</modelVersion>

    <properties>
        <idbus.kernel.version>1.5.0-SNAPSHOT</idbus.kernel.version>
        <idbus.sts.version>1.5.0-SNAPSHOT</idbus.sts.version>
    </properties>


    <prerequisites>
        <maven>2.0.9</maven>
    </prerequisites>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.atricore.idbus.capabilities.atricoreid</groupId>
                <artifactId>org.atricore.idbus.capabilities.atricoreid.common</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.capabilities.atricoreid</groupId>
                <artifactId>org.atricore.idbus.capabilities.atricoreid.protocol</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.capabilities.atricoreid</groupId>
                <artifactId>org.atricore.idbus.capabilities.atricoreid.main</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.capabilities.atricoreid</groupId>
                <artifactId>org.atricore.idbus.capabilities.atricoreid.rserver</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel</groupId>
                <artifactId>org.atricore.idbus.kernel.main</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel</groupId>
                <artifactId>org.atricore.idbus.kernel.planning</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.html</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.wst</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.atricoreid</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.capabilities.sts</groupId>
                <artifactId>org.atricore.idbus.capabilities.sts.main</artifactId>
                <version>${idbus.sts.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-core</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-aop</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-beans</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework.osgi</groupId>
                <artifactId>spring-osgi-core</artifactId>
                <version>${spring.osgi.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.aop</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.beans</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.context</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.core</artifactId>
                    </exclusion>
                </exclusions>

            </dependency>

            <dependency>
                <groupId>org.apache.servicemix.specs</groupId>
                <artifactId>org.apache.servicemix.specs.jaxb-api-2.1</artifactId>
                <version>${servicemix.specs.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.servicemix.bundles</groupId>
                <artifactId>org.apache.servicemix.bundles.jaxb-impl</artifactId>
                <version>${servicemix.jaxb-impl.version}</version>
            </dependency>

            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${commons-logging.version}</version>
            </dependency>

            <dependency>
                <groupId>org.codehaus.jackson</groupId>
                <artifactId>jackson-jaxrs</artifactId>
                <version>${jackson.version}</version>
            </dependency>

            <dependency>
                <groupId>org.codehaus.jackson</groupId>
                <artifactId>jackson-core-asl</artifactId>
                <version>${jackson.version}</version>
            </dependency>

            <dependency>
                <groupId>org.codehaus.jackson</groupId>
                <artifactId>jackson-mapper-asl</artifactId>
                <version>${jackson.version}</version>
            </dependency>


        </dependencies>
    </dependencyManagement>


    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>${felix.plugin.version}</version>
                    <extensions>true</extensions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.4.2</version>
                    <configuration>
                        <useFile>true</useFile>
                        <forkMode>once</forkMode>
                        <childDelegation>false</childDelegation>
                        <argLine>-Xmx512M</argLine>
                        <!--<redirectTestOutputToFile>true</redirectTestOutputToFile>-->
                        <workingDirectory>${basedir}</workingDirectory>
                        <systemProperties>
                            <property>
                                <name>log4j.configuration</name>
                                <value>log4j-tests.properties</value>
                            </property>
                        </systemProperties>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.7.0</version>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                        <maxmem>256M</maxmem>
                        <fork>${compiler.fork}</fork>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
        </plugins>
    </build>

    <modules>
        <module>protocol/atricoreid-protocol</module>
        <module>common</module>
        <module>as/main</module>
        <module>connectors/atricoreid-java-connector</module>
    </modules>

</project>
