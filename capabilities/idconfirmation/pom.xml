<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
        <groupId>org.atricore.idbus</groupId>
        <artifactId>all</artifactId>
        <version>1.5.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>org.atricore.idbus.capabilities.idconfirmation</groupId>
    <artifactId>idconfirmation</artifactId>
    <version>1.5.0-SNAPSHOT</version>
    <name>Atricore IDBus :: Capability : Identity Confirmation POM</name>
    <packaging>pom</packaging>


    <prerequisites>
        <maven>2.0.9</maven>
    </prerequisites>    

    <modelVersion>4.0.0</modelVersion>

    <properties>

        <idbus.kernel.version>1.5.0-SNAPSHOT</idbus.kernel.version>
        <idbus.sts.version>1.5.0-SNAPSHOT</idbus.sts.version>
        <idbus.sso.version>1.5.0-SNAPSHOT</idbus.sso.version>

        <apache.jasper.version>5.5.9</apache.jasper.version>
        <apache.xmlsec.version>1.4.2</apache.xmlsec.version>
        <camel.version>2.20.2</camel.version>
        <commons-el.version>1.0</commons-el.version>
        <commons-lang.version>2.0</commons-lang.version>
        <commons-logging.version>1.1.1</commons-logging.version>
        <commons-codec.version>1.3</commons-codec.version>
        <cxf.version>3.2.5</cxf.version>
        <felix.framework.version>5.6.10</felix.framework.version>
        <felix.plugin.version>3.5.0</felix.plugin.version>
        <javax.jaxws-api.version>2.1-1</javax.jaxws-api.version>
        <javax.servlet.jsp.version>2.0</javax.servlet.jsp.version>
        <jetty.version>6.1.22</jetty.version>
        <junit.version>4.4</junit.version>
        <logback.version>1.0.0</logback.version>
        <log4j.version>1.2.16</log4j.version>
        <specs2.version>2.9.1</specs2.version>
        <slf4j.version>1.6.1</slf4j.version>

        <servicemix.specs.version>1.2.0</servicemix.specs.version>
        <servicemix.jaxb-impl.version>2.1.6_1</servicemix.jaxb-impl.version>
        <servlet.version>2.5</servlet.version>
        <!--<spring.version>4.3.12.RELEASE</spring.version>-->
        <!--<spring.osgi.version>1.2.0</spring.osgi.version>-->
        <xalan.version>2.7.1</xalan.version>
        <xbean.version>3.7</xbean.version>
        <xercesImpl.version>2.9.1</xercesImpl.version>
        <karaf.version>4.2.0</karaf.version>

        <bnd.version.policy>[$(version;==;$(@)),$(version;+;$(@)))</bnd.version.policy>
    </properties>


    <repositories>
        <repository>
            <id>typesaferepo</id>
            <name>typesafe repo</name>
            <url>http://repo.typesafe.com/typesafe/releases/</url>
            <layout>default</layout>
        </repository>
        <repository>
            <id>ScalaToolsMaven2Repository</id>
            <name>Scala-Tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases/</url>
            <layout>default</layout>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>atricore-m2-snapshot-repo</id>
            <name>Atricore Maven2 SanpshotsRepository</name>
            <url>http://repository.atricore.org/m2-snapshot-repository</url>
            <releases>
                <checksumPolicy>fail</checksumPolicy>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <checksumPolicy>fail</checksumPolicy>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>typesaferepo</id>
            <name>typesafe repo</name>
            <url>http://repo.typesafe.com/typesafe/releases/</url>
            <layout>default</layout>
        </pluginRepository>
    </pluginRepositories>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>${felix.plugin.version}</version>
                    <extensions>true</extensions>
                    <configuration>
                        <instructions>
                            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                            <Import-Package>
                                !${project.artifactId},
                                org.apache.commons.logging; version="[1.0,1.1.99)"; provider=paxlogging,
                                org.apache.log4j; version="[1.2,1.3)"; provider=paxlogging,
                                org.apache.aries.blueprint.ext,
                                *
                            </Import-Package>
                            <Export-Package>
                                ${project.artifactId}.*;version=${project.version}
                            </Export-Package>
                        </instructions>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <modules>
        <module>main</module>
        <module>ui</module>
        <module>component</module>
    </modules>
</project>
