        <idbus.oauth2-oidc-sdk.version>1.5.0-SNAPSHOT</idbus.oauth2-oidc-sdk.version>

        <apache.jasper.version>5.5.9</apache.jasper.version>
        <apache.xmlsec.version>1.4.2</apache.xmlsec.version>
