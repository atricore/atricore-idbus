<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
        <groupId>org.atricore.idbus</groupId>
        <artifactId>all</artifactId>
        <version>1.6.1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>org.atricore.idbus.capabilities.openid</groupId>
    <artifactId>openid</artifactId>
    <version>1.6.1-SNAPSHOT</version>
    <name>Atricore IDBus :: Capability : OpenID POM</name>
    <packaging>pom</packaging>


    <prerequisites>
        <maven>2.0.9</maven>
    </prerequisites>

    <modelVersion>4.0.0</modelVersion>

    <properties>

        <openid4java.version>0.9.6</openid4java.version>
        <openxri.version>1.2.0</openxri.version>
        <guice.annotations.version>1.0</guice.annotations.version>

        <idbus.kernel.version>1.6.1-SNAPSHOT</idbus.kernel.version>
        <idbus.sts.version>1.6.1-SNAPSHOT</idbus.sts.version>

        <apache.jasper.version>5.5.9</apache.jasper.version>
        <apache.xmlsec.version>1.4.2</apache.xmlsec.version>
        <camel.version>1.6.1</camel.version>
        <commons-el.version>1.0</commons-el.version>
        <commons-lang.version>2.0</commons-lang.version>
        <commons-logging.version>1.1.1</commons-logging.version>
        <commons-codec.version>1.3</commons-codec.version>
        <cxf.version>2.2.2</cxf.version>
        <felix.osgi.version>1.4.0</felix.osgi.version>
        <felix.plugin.version>2.1.0</felix.plugin.version>
        <javax.jaxws-api.version>2.1-1</javax.jaxws-api.version>
        <javax.servlet.jsp.version>2.0</javax.servlet.jsp.version>
        <jetty.version>6.1.22</jetty.version>
        <junit.version>4.4</junit.version>
        <log4j.version>1.2.16</log4j.version>
        <servicemix.specs.version>1.2.0</servicemix.specs.version>
        <servicemix.jaxb-impl.version>2.1.6_1</servicemix.jaxb-impl.version>
        <servicemix.jaxb.version>1.2.0</servicemix.jaxb.version>
        <servlet.version>2.5</servlet.version>
        <!--<spring.version>3.1.0.RELEASE</spring.version>-->
        <!--<spring.osgi.version>1.2.0</spring.osgi.version>-->
        <xalan.version>2.7.1</xalan.version>
        <xbean.version>3.7</xbean.version>
        <xercesImpl.version>2.9.1</xercesImpl.version>
        <karaf.version>2.2.3</karaf.version>

        <bnd.version.policy>[$(version;==;$(@)),$(version;+;$(@)))</bnd.version.policy>
    </properties>


    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.openid4java</groupId>
                <artifactId>openid4java-consumer</artifactId>
                <version>${openid4java.version}</version>
            </dependency>

            <dependency>
                <groupId>org.openid4java</groupId>
                <artifactId>openid4java-consumer</artifactId>
                <version>${openid4java.version}</version>
                <type>pom</type>
            </dependency>

            <dependency>
                <groupId>org.openxri</groupId>
                <artifactId>openxri-syntax</artifactId>
                <version>${openxri.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>org.openxri</groupId>
                <artifactId>openxri-client</artifactId>
                <version>${openxri.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

            <dependency>
                <groupId>eu.cedarsoft</groupId>
                <artifactId>guice-annotations</artifactId>
                <version>${guice.annotations.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel</groupId>
                <artifactId>org.atricore.idbus.kernel.main</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel</groupId>
                <artifactId>org.atricore.idbus.kernel.planning</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.xmldsig</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.sso</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.html</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.wst</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.capabilities.sts</groupId>
                <artifactId>org.atricore.idbus.capabilities.sts.main</artifactId>
                <version>${idbus.sts.version}</version>
            </dependency>

            <dependency>
                <groupId>org.atricore.idbus.kernel.common</groupId>
                <artifactId>org.atricore.idbus.kernel.common.samlr2</artifactId>
                <version>${idbus.kernel.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-core</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-aop</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-beans</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context-support</artifactId>
                <version>${spring.version}</version>
            </dependency>


            <dependency>
                <groupId>org.springframework.osgi</groupId>
                <artifactId>spring-osgi-core</artifactId>
                <version>${spring.osgi.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.aop</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.beans</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.context</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.springframework</groupId>
                        <artifactId>org.springframework.core</artifactId>
                    </exclusion>
                </exclusions>

            </dependency>

            <dependency>
                <groupId>org.apache.servicemix.specs</groupId>
                <artifactId>org.apache.servicemix.specs.jaxb-api-2.1_1</artifactId>
                <version>${servicemix.jaxb.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.servicemix.bundles</groupId>
                <artifactId>org.apache.servicemix.bundles.jaxb-impl</artifactId>
                <version>${servicemix.jaxb-impl.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.felix</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>${felix.osgi.version}</version>
            </dependency>

            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${commons-logging.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>${felix.plugin.version}</version>
                    <extensions>true</extensions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.4.2</version>
                    <configuration>
                        <useFile>true</useFile>
                        <forkMode>once</forkMode>
                        <childDelegation>false</childDelegation>
                        <argLine>-Xmx512M</argLine>
                        <!--<redirectTestOutputToFile>true</redirectTestOutputToFile>-->
                        <workingDirectory>${basedir}</workingDirectory>
                        <systemProperties>
                            <property>
                                <name>log4j.configuration</name>
                                <value>log4j-tests.properties</value>
                            </property>
                        </systemProperties>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.0.2</version>
                    <configuration>
                        <source>1.7</source>
                        <target>1.7</target>
                        <maxmem>256M</maxmem>
                        <fork>${compiler.fork}</fork>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
        </plugins>
    </build>

    <modules>
        <module>main</module>
        <module>ui</module>
    </modules>
</project>
