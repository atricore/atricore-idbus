    <build>

        <resources>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${felix.plugin.version}</version>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>
                                     org.atricore.idbus.capabilities.sso.ui.internal.Activator
                        </Bundle-Activator>
                        <Export-Package>org.atricore.idbus.capabilities.sso.ui.*;version=${project.version}
                        </Export-Package>
                        <Import-Package>
                           !org.atricore.idbus.capabilities.sso.ui*,
                            *,<!-- let bnd import direct dependencies -->
                            org.apache.wicket.settings,
                            org.apache.wicket.session,
                            org.apache.wicket.util.file,
                            org.apache.wicket.request,
                            org.apache.wicket.ajax,
                            org.apache.wicket.markup.html.link,
                            org.apache.wicket.protocol.http,
                            org.apache.wicket.event,

                            <!-- then wicket stuff -->
                            org.ops4j.pax.wicket.api,
                            org.ops4j.pax.wicket.util,
                            org.ops4j.pax.wicket.util.proxy,
                            <!-- osgi stuff -->
                            org.osgi.framework,
                            org.osgi.service.blueprint,
                            org.osgi.service.startlevel,
                            <!-- cglib -->
                            net.sf.cglib.proxy;version="[2,3)",
                            net.sf.cglib.core;version="[2,3)",
                            net.sf.cglib.reflect;version="[2,3)",
                            <!-- and servlet api -->
                            javax.servlet,
                            javax.servlet.http,
                            <!-- queues stuff -->
                            javax.jms,
                            org.apache.activemq
                        </Import-Package>
                        <Require-Bundle>
                            org.ops4j.pax.wicket.service,
                            org.apache.wicket.util,
                            org.apache.wicket.request,
                            org.apache.wicket.core,
                            org.apache.wicket.auth-roles,
                            org.apache.wicket.extensions
                        </Require-Bundle>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Spring-Context>*;timeout:=60;wait-for-dependencies:=true;create-asynchronously:=false</Spring-Context>
                        <IdBus-UI>true</IdBus-UI>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
