    <version>1.5.2-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>Atricore IDBus :: Capability : SPML R2 Command Component</name>

    <dependencies>

        <dependency>
            <groupId>org.atricore.idbus.kernel</groupId>
