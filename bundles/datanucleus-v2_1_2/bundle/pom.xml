<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.atricore.idbus.bundles</groupId>
        <artifactId>datanucleus-v2_1_2</artifactId>
        <version>1.5.0-SNAPSHOT</version>
    </parent>

    <artifactId>org.atricore.idbus.bundles.datanucleus-v2_1_2</artifactId>
    <version>1.5.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>Atricore IDBus :: Bundle : Datanucleus v2.1.2 OSGi bundle</name>

    <dependencies>

        <!-- OSGified -->
        <dependency>
            <groupId>org.datanucleus</groupId>
            <artifactId>datanucleus-core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>datanucleus-core-v2_1_2</artifactId>
        </dependency>

        <dependency>
            <groupId>org.datanucleus</groupId>
            <artifactId>datanucleus-rdbms</artifactId>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>datanucleus-rdbms-v2_1_2</artifactId>
        </dependency>

        <!-- provided -->
        <dependency>
            <groupId>org.atricore.idbus.kernel.common</groupId>
            <artifactId>org.atricore.idbus.kernel.common.support</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.atricore.idbus.bundles</groupId>
            <artifactId>org.atricore.idbus.bundles.javax-jdo-v3_0</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-orm</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.osgi</groupId>
            <artifactId>spring-osgi-core</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>org.springframework.aop</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>org.springframework.beans</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>org.springframework.context</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>org.springframework.core</artifactId>
                </exclusion>
            </exclusions>
            
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.framework</artifactId>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Embed-Dependency>*;scope=compile; type=!pom; inline=false</Embed-Dependency>

                        <!-- Bundle Symbolic name is hard coded in datanucleus code! -->
                        <Bundle-SymbolicName>org.datanucleus</Bundle-SymbolicName>
                        <Export-Package>
                            org.datanucleus.*;version=${datanucleus.osgi.version},
                            org.atricore.idbus.bundles.datanucleus.core.*;version=${datanucleus.osgi.version}
                        </Export-Package>
                        <Private-Package>!*</Private-Package>
                        <Import-Package>
                            org.apache.commons.logging; version="[1.0,1.1.99)"; provider=paxlogging,
                            org.apache.log4j; version="[1.2,1.3)"; provider=paxlogging,
                            javax.jdo; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.jdo.annotations; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.jdo.datastore; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.jdo.identity; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.jdo.listener; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.jdo.metadata; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.jdo.spi; version="[${javax.jdo.osgi.version},${javax.jdo.osgi.version}]",
                            javax.transaction;resolution:=optional,
                            javax.transaction.xa;resolution:=optional,
                            javax.naming,
                            javax.naming.spi,
                            javax.xml.parsers,
                            javax.xml.transform,
                            javax.xml.transform.dom,
                            javax.xml.transform.stream,
                            javax.xml.validation,
                            javax.sql,
                            org.atricore.idbus.kernel.common.support.osgi,
                            org.springframework.osgi.context,
                            org.springframework.orm.jdo; version="[${spring.version},4.3.12.RELEASE]",
                            org.springframework.beans.factory; version="[${spring.version},4.3.12.RELEASE]",
                            org.xml.sax,
                            org.xml.sax.helpers,
                            org.eclipse.core.runtime;resolution:=optional,
                            org.eclipse.osgi.service.resolver;resolution:=optional,
                            org.omg.CORBA;resolution:=optional,
                            org.osgi.framework,
                            org.w3c.dom,
                            org.datanucleus.api,
                            org.datanucleus.cache,
                            org.datanucleus.exceptions,
                            org.datanucleus.identity,
                            org.datanucleus.jdo,
                            org.datanucleus.jta,
                            org.datanucleus.management,
                            org.datanucleus.management.runtime,
                            org.datanucleus.metadata,
                            org.datanucleus.plugin,
                            org.datanucleus.properties,
                            org.datanucleus.state,
                            org.datanucleus.store,
                            org.datanucleus.store.connection,
                            org.datanucleus.store.fieldmanager,
                            org.datanucleus.store.query,
                            org.datanucleus.store.types,
                            org.datanucleus.transaction,
                            org.datanucleus.util,
                            oracle.*;resolution:=optional,
                            oracle.sql;resolution:=optional,
                            oracle.jdbc;resolution:=optional,
                            oracle.jdbc.driver;resolution:=optional,
                            javax.imageio;resolution:=optional,
                            org.apache.tools.ant;resolution:=optional,
                            org.apache.tools.ant.taskdefs;resolution:=optional,
                            org.apache.tools.ant.types;resolution:=optional
                        </Import-Package>
                        <!--  
                        <DynamicImport-Package>com.atricore.*,org.atricore.*</DynamicImport-Package>
                        -->

                    </instructions>
                </configuration>

            </plugin>
        </plugins>


    </build>
</project>
