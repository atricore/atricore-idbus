<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="derbyNetworkServerControl"
          init-method="init"
          destroy-method="destroy"
          class="org.atricore.idbus.bundles.apache.derby.OsgiNetworkServerControl" />

    <reference-list id="derbyServerDefinition"
                    interface="org.atricore.idbus.bundles.apache.derby.NetworkServerDescriptor"
                    availability="optional">

        <reference-listener ref="derbyNetworkServerControl"
                            bind-method="register"
                            unbind-method="unregister" />

    </reference-list>

</blueprint>